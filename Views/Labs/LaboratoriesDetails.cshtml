@model UAAAS.Models.Laboratories
@{
    ViewBag.Title = "LaboratoriesDetails";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
}

<h2>Laboratories Details</h2>

<div class="display-label" style="width: 40%;">Degree</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.degree)
    </div>
    <div class="display-label" style="width: 40%;">Department</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.department)
    </div>
<div class="display-label" style="width: 40%;">Specialization</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.specializationName)
    </div>
<div class="display-label" style="width: 40%;">Shift</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.shiftName)
    </div>
<div class="display-label" style="width: 40%;">Year</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.year)
    </div>
<div class="display-label" style="width: 40%;">Name of the Laboratory</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.labName)
    </div>
<div class="display-label" style="width: 40%;"> @Html.LabelFor(model => model.IsShared)</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.IsShared)
    </div>
<div class="display-label" style="width: 40%;">No. of Experiments</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.totalExperiments)
    </div>
<div class="display-label" style="width: 40%;">Floor Area(in Sqm)</div>
    <div class="display-field" style="width: 50%;">
        @Html.DisplayFor(model => model.labFloorArea)
    </div>
