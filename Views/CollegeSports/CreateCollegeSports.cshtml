@model UAAAS.Models.CollegeSports
@{
    ViewBag.Title = "Add College Sports";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
}

<h2>Add College Sports</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("AddEditRecord", "CollegeSports", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "CollegeSportsDialog" }))
{
    @Html.ValidationSummary(true)    
    @Html.HiddenFor(model => model.collegeId, new { @Value = Model.collegeId })
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }    
    <div class="details_table">
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="editor-label" style="width:150px">
            @Html.LabelFor(model => model.sportsTypeId)
        </div>
        <div class="editor-field" style="width:250px">
             @Html.DropDownListFor(model => model.sportsTypeId,
                                                     new SelectList(ViewBag.SportsType as System.Collections.IEnumerable, "id", "sportType"),
                                                     "-- Select --", new { id = "sportType" })
            @Html.ValidationMessageFor(model => model.sportsTypeId)
        </div>

        <div class="editor-label" style="width:150px">
            @Html.LabelFor(model => model.sportsFacility)
        </div>
        <div class="editor-field" style="width:250px">
            @Html.TextBoxFor(model => model.sportsFacility)
            @Html.ValidationMessageFor(model => model.sportsFacility)
        </div>

        @Html.HiddenFor(model => model.createdOn)
        @Html.HiddenFor(model => model.createdBy)
        <div style="text-align: center">
            <p>
                @if (ViewBag.IsUpdate == true)
                {
                    <input type="submit" value="Save" id="btnSave" name="cmd" />                    
                }
                else
                {
                    <input type="submit" value="Add" id="btnAdd" name="cmd" />
                }
            </p>
        </div>
 </div>
}
