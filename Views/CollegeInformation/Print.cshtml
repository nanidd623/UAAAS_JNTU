            var txtFromId = "txtfrom_" + item.id;
            var txtToId = "txtto_" + item.id;
            var rdoYesId = "rdoYes_" + item.id;
            var rdoNoId = "rdoNo_" + item.id;
            var selectedAffiliation = "affiliationTypeId" + @rowNo;
            var fromDate = "affiliationFromDate" + @rowNo;
            var toDate = "affiliationToDate" + @rowNo++;
            var labelsid = "lbl_" + item.id;
            var fieldsid = "field_" + item.id;
            var radiosid = "radio_" + item.id;
            
            <tr>
                <td width="25%" bgcolor="@OddColor">
                    @item.name
                </td>
                <td width="25%" bgcolor="@OddColor">

                    @if (@item.selected == 1)
                    {                       
                        <label>Yes</label> 
