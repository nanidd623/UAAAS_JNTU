            <script type="text/javascript">
                if(@item.selected == 1)
                {
                    $("#@rdoYesId").attr('checked', 'checked');
                    $("#@labelsid table").attr('style', 'display: block');
                    $("#@fieldsid table").attr('style', 'display: block');

                 
                }
                else
                {
                    $("#@rdoNoId").attr('checked', 'checked');
                    $("#@labelsid table").attr('style', 'display: none');
                    $("#@fieldsid table").attr('style', 'display: none');
                    $("#@txtFromId").val(""); 
                    $("#@txtToId").val(""); 

                 
                }

                $("#@rdoYesId").click(function(){
                    $("#@labelsid table").attr('style', 'display: block');
                    $("#@fieldsid table").attr('style', 'display: block');

                
                });

                $("#@rdoNoId").click(function(){
                    $("#@labelsid table").attr('style', 'display: none');
                    $("#@fieldsid table").attr('style', 'display: none');
                    $("#@txtFromId").val("");
                    $("#@txtToId").val(""); 

                  
                });
            </script>
