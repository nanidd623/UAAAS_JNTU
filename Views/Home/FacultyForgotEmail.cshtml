@model UAAAS.Models.FacultyForgotEmail

@{
    ViewBag.Title = "Registered Faculty";
    // Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Find User Id</h2>
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>



@using (Html.BeginForm())
{
    if (TempData["Error"] != null)
    {
        <div class="error">
            <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
        </div>
    }


    <div style="min-height:330px">
        <div class="details_table">

            <div class="editor-label">
                @Html.LabelFor(m => m.RegistrationNumber)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.RegistrationNumber, new { @class = "required", @maxlength = "20" })
                @Html.ValidationMessageFor(m => m.RegistrationNumber)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.PanNumber)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.PanNumber, new { @class = "required", @maxlength = "20" })
                @Html.ValidationMessageFor(m => m.PanNumber)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.DateofBirth)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.DateofBirth, new { @class = "required", @placeholder = "MM-DD-YYYY" })
                @Html.ValidationMessageFor(m => m.DateofBirth)
            </div>
            @if (TempData["Email"] != null)
            {
                <div class="editor-label">
                    Your User Id
                </div>
                <div class="editor-field">
                    @TempData["Email"]
                </div>
            }

            <div class="display-label last-row">
                &nbsp;
            </div>
            <div class="display-field last-row">
                <p>
                    <input type="submit" id="checkreg" value="Check User Id" />
                </p>
            </div>
            <div class="clear"></div>
        </div>
    </div>
}

