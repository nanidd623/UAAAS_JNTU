@model IEnumerable<UAAAS.Models.CollegesReport>
    @{
        ViewBag.Title = "JNTUH AAC (Affiliations & Academic Audit)";
        Layout = "~/Views/Shared/_LayoutHome.cshtml";
    }
<script type="text/javascript">

    jQuery(document).ready(function () {

        var oTable = $('#example').dataTable({
            "bJQueryUI": true,
            "iDisplayLength": 25,
            "bStateSave": false,
            "sDom": '<"top"lfip>rt<"bottom"ip<"clear">',
            //"sPaginationType": "full_numbers",
            "oLanguage": {
                "sSearch": "Search all columns:",
                "oPaginate": {
                    "sFirst": "",
                    "sLast": "",
                    "sNext": "",
                    "sPrevious": ""
                }
            },
            "fnInitComplete": function () {
                var oSettings = $('#example').dataTable().fnSettings();
                for (var i = 0; i < oSettings.aoPreSearchCols.length; i++) {
                    if (oSettings.aoPreSearchCols[i].sSearch.length > 0) {
                        $("tfoot input")[i].value = oSettings.aoPreSearchCols[i].sSearch;
                        $("tfoot input")[i].className = "";
                    }
                }
            },
            "aoColumns": [{ "bSortable": true, "bSearchable": true }, null, null, null,null ],
            //"aoColumns": [{ type: "select", values: ['Gecko', 'Trident', 'KHTML', 'Misc', 'Presto', 'Webkit', 'Tasman'] },{ type: "text" },null,{ type: "number" },{ type: "select" }]
        });
        /*
         * Support functions to provide a little bit of 'user friendlyness' to the textboxes in
         * the footer
         */
        $("tfoot input").each(function (i) {
            asInitVals[i] = this.value;
        });
        $("tfoot input").focus(function () {
            if (this.className == "search_init") {
                this.className = "";
                this.value = "";
            }
        });
        $("tfoot input").blur(function (i) {
            if (this.value == "") {
                this.className = "search_init";
                this.value = asInitVals[$("tfoot input").index(this)];
            }
        });

        $("tfoot input").keyup(function () {
            /* Filter on the column (the index) of this element */
            oTable.fnFilter(this.value, $("tfoot input").index(this));
        });

    })
</script>
<style>
      .DivHeaders {
        text-align: center;
        /*background-color: #1F7DDA;*/
        color: white;
    }
</style>
<br/>
<div class="DivHeaders" style="background-color:#407F46;font-weight:bold;">
    Affiliated Colleges
</div>
    <table id="example" class="display" style="width: 100%">
        <thead>
            <tr>
                <th style="width: 50px; text-align: center;">
                    S.No
                </th>
                <th style="width: 50px; text-align: center;">
                    College Code
                </th>
                <th style="width: 200px; text-align: center;">
                    College Name
                </th>
               
                <th style="width: 150px; text-align: center;">
                    Mandal
                </th>
                <th style="width: 150px; text-align: center;">
                    District
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center; text-transform: uppercase;">
                            @(i = i + 1)
                        </td>
                        <td style="text-align: center; text-transform: uppercase;">
                            @item.collegeCode
                        </td>
                        <td style="text-align:left; text-transform: uppercase;">
                         @Html.ActionLink(@item.collegeName, "CollegeDetails", new { Id = UAAAS.Models.Utilities.EncryptString(@item.collegeid.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]) }, new { target = "_blank" })
                        </td>
                       
                        <td style="text-align: left; text-transform: uppercase;">
                            @item.mandal
                        </td>
                        <td style="text-align: left; text-transform: uppercase;">
                            @item.districtName
                        </td>
                    </tr>
                }
            }
          
          
           
        </tbody>

    </table>


