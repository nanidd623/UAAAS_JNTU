                @Html.LabelFor(model => model.InternOrderCopy)
            </td>
            <td class="col2">
                @if (Model.InternOrderCopyPath != null)
                {
                    @Html.TextBoxFor(model => model.InternOrderCopy, new { type = "file", @id = "@txtFile", @name = "@file", @class = "Supportingfile" })
                    <a href="~/Content/Upload/College/CourtCases/Intern Order Copy/@Model.InternOrderCopyPath" target="_blank">
                        <span style="color: red;"><b>View</b></span>
                    </a>
                }
                else
                {
                    @Html.TextBoxFor(model => model.InternOrderCopy, new { type = "file", @id = "@txtFile", @name = "@file", @class = "Supportingfile" })
                }
                @Html.ValidationMessageFor(model => model.InternOrderCopy)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.OrderCopy)
            </td>
            <td class="col2">
                @if (Model.OrderCopypath != null)
                {
                    @Html.TextBoxFor(model => model.OrderCopy, new { type = "file", @id = "@txtFile", @name = "@file", @class = "Supportingfile" })
                    <a href="~/Content/Upload/College/CourtCases/Order Copy/@Model.OrderCopypath" target="_blank">
                        <span style="color: red;"><b>View</b></span>
                    </a>
                }
