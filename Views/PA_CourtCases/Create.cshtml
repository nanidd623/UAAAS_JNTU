                @Html.DropDownListFor(model => model.YearofFilling, new SelectList(ViewBag.YearofFilling as System.Collections.IEnumerable, "id", "academicYear"), "---Select---", new { @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.YearofFilling)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.PrayerofthePetitioner)
            </td>
            <td class="col2">
                @Html.TextAreaFor(model => model.PrayerofthePetitioner, new { @placeholder = "Enter Prayer of the Petitioner" })
                @Html.ValidationMessageFor(model => model.PrayerofthePetitioner)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.Respondents)
            </td>
            <td class="col2">
