                    </td>
                </tr>

                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Program Type [ New / Existing ]
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">

                        @Html.DisplayFor(model => Model.type) Program
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Shift
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.shiftId)
                    </td>
                </tr>
                <tr>
