@model UAAAS.Models.CollegePGCourse
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    }   
    ViewBag.Title = @Html.DisplayFor(model => Model.jntuh_specialization.specializationName);
    int sno = 1;
}
<script type="text/javascript">
    function printdiv(printpage) {
        //Get the HTML of div
        var divElements = document.getElementById(printpage).innerHTML;
        //Get the HTML of whole page
        var oldPage = document.body.innerHTML;

        //Reset the page's HTML with div's HTML only
        document.body.innerHTML =
          "<html><head><title></title></head><body>" +
          divElements.fontsize(1) + "</body>";

        //Print Page
        window.print();

        //Restore orignal HTML
        document.body.innerHTML = oldPage;
        return false;
    }
</script>
<p class="create_link_right">
    <input name="btnPrint" type="button" onclick="printdiv('div_print');" class="create_button" value=" Print ">
    @if (@ViewBag.Editcollege == true)
    {
         @Html.ActionLink("Back", "Index", "CollegePGCourse",new{collegeId = @ViewBag.collegeId}, new { @class = "create_button" })
    }
    else
    {
        @*"Index/" + @ViewContext.RouteData.Values["id"] don't change This is for Admin and College purpose*@
        @Html.ActionLink("Back", "View/" + @ViewContext.RouteData.Values["id"], "CollegePGCourse", new { @class = "create_button" })
    }
   

</p>
<div id="div_print">

    @using (Html.BeginForm())
    {    
        <div style="padding: 10px;">
            <b style="font-size: 18px; text-transform: uppercase;">@Html.DisplayFor(model => Model.jntuh_specialization.specializationName)</b>
            @Html.HiddenFor(model => model.collegeId, new { @Value = Model.collegeId })
