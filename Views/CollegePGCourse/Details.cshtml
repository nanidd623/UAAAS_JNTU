                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Name of the College
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.jntuh_college.collegeName)
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="width: 35%; border: solid 1px #000;">College Code
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.jntuh_college.collegeCode)
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Degree
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.degree)
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Department
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.jntuh_department.departmentName)
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">Name of the PG Programme
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
