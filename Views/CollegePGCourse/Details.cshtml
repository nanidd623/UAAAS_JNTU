                        <td style="text-align: center;border: solid 1px #000; color: black;">@(sno++)</td>
                        <td style="border: solid 1px #000; color: black;">@item.facultyName</td>
                        <td style="border: solid 1px #000; color: black;">@item.designation</td>
                        <td style="border: solid 1px #000; color: black;">
                            <table class="no-border">
                                <tr>
                                    <td style="width: 35px;"><b>UG</b></td>
                                    <td style="width: 10px;">-</td>
                                    <td>@item.UG</td>
                                </tr>
                                <tr>
                                    <td><b>PG</b></td>
                                    <td>-</td>
                                    <td>@item.PG</td>
                                </tr>
                                <tr>
                                    <td><b>Ph.D</b></td>
                                    <td>-</td>
                                    <td>@item.Phd</td>
                                </tr>
                            </table>
                        </td>
                        <td style="border: solid 1px #000; color: black;">
                            <table class="no-border">
                                <tr>
                                    <td style="width: 10px;">-</td>
                                    <td>@item.UGSpecialization</td>
                                </tr>
                                <tr>
                                    <td>-</td>
                                    <td>@item.PGSpecialization</td>
                                </tr>
                                <tr>
                                    <td>-</td>
                                    <td>@item.PhdSpecialization</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>


