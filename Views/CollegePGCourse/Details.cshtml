                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => Model.intake)
                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">No of Professors
                    </th>
                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => model.professors)

                    </td>
                </tr>
                <tr>
                    <th class="editor-label1" style="border: solid 1px #000;">No of Associate Professors
                    </th>
