                    <th colspan="6" class="editor-label1" style="text-align: left; border: solid 1px #000;">Details of PG faculty</th>
                </tr>
                <tr>
                    <th class="editor-label1" width="50px" style="width: 50px; text-align: center; border: solid 1px #000;">S.No</th>
                    <th class="editor-label1" style="width: 320px; border: solid 1px #000;">Name of the Faculty</th>
                    <th class="editor-label1" width="150px" style="width: 150px; border: solid 1px #000;">Designation</th>
                    <th class="editor-label1" width="250px" style="width: 250px; border: solid 1px #000; text-align: center">Qualification</th>
                    <th class="editor-label1" width="250px" style="width: 250px; border: solid 1px #000; text-align: left">Specialization</th>
                </tr>
                @foreach (var item in Model.PGFaculty)
                {
