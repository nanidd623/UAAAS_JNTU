                    <td class="editor-field1" style="border: solid 1px #000; color: black;">
                        @Html.DisplayFor(model => model.UGFacultyStudentRatio)
                    </td>
                </tr>
            </table>

            @Html.HiddenFor(model => model.createdBy)
