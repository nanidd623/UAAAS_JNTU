@model IEnumerable<UAAAS.Models.CollegeFeeReimbursement>
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    ViewBag.Title = "College Fee Reimbursement";
    int num = 1;
}

@*<p class="create_link_right">
    <input name="btnPrint" type="button" onclick="printdiv('div_print');" value=" Print" class="create_button">
</p>*@
<script type="text/javascript">
    $(document).ready(function () {
        $(".view_hide").show();
        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit Fee Reimbursement',
            autoOpen: false,
            resizable: false,
            height: 600,
            width: 700,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Fee Reimbursement'
            });
            url = $("#openDialog").attr('href');
            $myDialog.dialog('open');
            return false;
        });

        $('.full_table').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit Fee Reimbursement'
            });

            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Fee Reimbursement',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Fee Reimbursement',
                autoOpen: false,
                resizable: false,
                height: 600,
                width: 650,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });

    function printdiv(printpage) {
        $(".view_hide").hide();
        //Get the HTML of div
        var divElements = document.getElementById(printpage).innerHTML;
        //Get the HTML of whole page
        var oldPage = document.body.innerHTML;

        //Reset the page's HTML with div's HTML only
        document.body.innerHTML =
          "<html><head><title></title></head><body>" +
          divElements.fontsize(1) + "</body>";

        //Print Page
        window.print();

        //Restore orignal HTML
        document.body.innerHTML = oldPage;
        $(".view_hide").show();
        return false;
    }
</script>

<div id="div_print">
    <h2>College Fee Reimbursement</h2>
    <table class="four_columns" style="width: 100%; font-size: 0.7rem;">
        <tr>
            <th class="col11" colspan="15">
                <b>Details of the Candidates & Fee Reimbursement under Convener Quota & Management Quota for the A.Y.@ViewBag.AcademeicYear :</b>
            </th>
        </tr>
        <tr>

            <th style="text-align: center;" rowspan="3" class="col11">S.No
            </th>
            <th rowspan="3" class="col11">Degree
            </th>
            <th style="text-align: center;" rowspan="3" class="col11">Dept.
            </th>
            <th style="text-align: center;" rowspan="3" class="col11">Specialization
            </th>
            <th style="text-align: center;" rowspan="3" class="col11">Shift
            </th>
            <th style="text-align: center;" rowspan="3" class="col11">Year in degree
            </th>
            <th style="text-align: center;" colspan="8" class="col11">@ViewBag.AcademeicYear
            </th>
            <th colspan="3" style="text-align: center;" rowspan="3" class="col11 view_hide"></th>
        </tr>
        <tr>
            <th style="text-align: center;" colspan="4" class="col11">Convener Quota Seats
            </th>
            <th style="text-align: center;" colspan="4" class="col11">Management Quota Seats
            </th>
        </tr>
        <tr style="">
            <th style="text-align: center;" class="col11">Without Re-imbursement Seats
            </th>
            <th style="text-align: center;" class="col11">Total Fee(Rs.)
            </th>
            <th style="text-align: center;" class="col11">With Re-imbursement Seats
            </th>
            <th style="text-align: center;" class="col11">Total Fee(Rs.)
            </th>
            <th style="text-align: center;" class="col11">NRI Seats
            </th>
            <th style="text-align: center;" class="col11">Total Fee(Rs.)
            </th>
            <th style="text-align: center;" class="col11">PIO Seats
            </th>
            <th style="text-align: center;" class="col11">Total Fee(Rs.)
            </th>
        </tr>

        @foreach (var item in ViewBag.CollegeFeeReimbursement as List<UAAAS.Models.CollegeFeeReimbursement>)
        {
            <tr>
                <td style="width: 30px; text-align: center;" class="col21">
                    @(num++)
                </td>
                <td style="width: 60px;" class="col21">@item.degree</td>
                <td style="width: 50px;" class="col21">@item.department</td>
                <td class="col21">@item.specialization</td>
                <td style="width: 30px;" class="col21">@item.shift</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.yearInDegree</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.seatsWithoutReimbursement</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.feeWithoutReimbursement</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.seatsWithReimbursement</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.feeWithReimbursement</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.NRISeats</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.totalNRIFee</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.PIOSeats</td>
                <td style="width: 30px; text-align: center;" class="col21">@item.totalPIOFee</td>
                <td style="width: 20px; text-align: center;" class="col21 view_hide">
                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "viewDialog view_button" })
                </td>
            </tr>
        }

    </table>
    @if (ViewBag.Count == 0)
    {
        <div class="warning" style="width: 200px; margin: 0 auto;">
            <p>No records found</p>
        </div>
    }

    <div id="dialog-view" style="display: none">
    </div>
</div>
