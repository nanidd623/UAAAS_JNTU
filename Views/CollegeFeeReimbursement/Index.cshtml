@model IEnumerable<UAAAS.Models.CollegeFeeReimbursement>
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
    ViewBag.Title = "College Fee Reimbursement";
    int num = 1;
}
<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit Fee Reimbursement',
            autoOpen: false,
            resizable: false,
            height: 600,
            width: 700,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Fee Reimbursement'
            });
            url = $("#openDialog").attr('href');
            $myDialog.dialog('open');
            return false;
        });

        $('.full_table').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit Fee Reimbursement'
            });

            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Fee Reimbursement',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Fee Reimbursement',
                autoOpen: false,
                resizable: false,
                height: 600,
                width: 650,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
@if (ViewBag.NotUpload == true)
{
    <b>Details of the Candidates & Fee Reimbursement under Convener Quota & Management Quota for the A.Y.@ViewBag.AcademeicYear :</b>
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    if (TempData["FeeError"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["FeeError"].ToString()</p>
    </div>
    }
    if (TempData["FeeSuccess"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["FeeSuccess"].ToString()</p>
    </div>
    }
    <table>
        <tr>
            <td class="col1" colspan="4">
                <b>Details of the Candidates & Fee Reimbursement under Convener Quota & Management Quota for the A.Y.@ViewBag.AcademeicYear :</b>
            </td>
        </tr>
        <tr>
            <td class="create_link_right">
                @Html.ActionLink("Add Fee Reimbursement", "AddEditRecord", "CollegeFeeReimbursement", new { collegeId = @ViewBag.collegeId }, new { @id = "openDialog", @class = "create_button" })
            </td>
        </tr>
    </table>
    <table class="full_table" style="width: 100%; font-size: 0.7rem;">
        <tr>
            <th style="text-align: center;" rowspan="3">S.No
            </th>
            <th rowspan="3">Degree
            </th>
            <th style="text-align: center;" rowspan="3">Dept.
            </th>
            <th style="text-align: center;" rowspan="3">Specialization
            </th>
            <th style="text-align: center;" rowspan="3">Shift
            </th>
            <th style="text-align: center;" rowspan="3">Year in degree
            </th>
            <th style="text-align: center;" colspan="8">@ViewBag.AcademeicYear
            </th>
            <th colspan="3" style="text-align: center;" rowspan="3"></th>
        </tr>
        <tr>
            <th style="text-align: center;" colspan="4">Convener Quota Seats
            </th>
            <th style="text-align: center;" colspan="4">Management Quota Seats
            </th>
        </tr>
        <tr style="">
            <th style="text-align: center;">Without Re-imbursement Seats
            </th>
            <th style="text-align: center;">Total Fee(Rs.)
            </th>
            <th style="text-align: center;">With Re-imbursement Seats
            </th>
            <th style="text-align: center;">Total Fee(Rs.)
            </th>
            <th style="text-align: center;">NRI Seats
            </th>
            <th style="text-align: center;">Total Fee(Rs.)
            </th>
            <th style="text-align: center;">PIO Seats
            </th>
            <th style="text-align: center;">Total Fee(Rs.)
            </th>
        </tr>

        @foreach (var item in ViewBag.CollegeFeeReimbursement as List<UAAAS.Models.CollegeFeeReimbursement>)
        {
            <tr>
                <td style="width: 30px; text-align: center;">
                    @(num++)
                </td>
                <td style="width: 60px;">@item.degree</td>
                <td style="width: 50px;">@item.department</td>
                <td>@item.specialization</td>
                <td style="width: 30px;">@item.shift</td>
                <td style="width: 30px; text-align: center;">@item.yearInDegree</td>
                <td style="width: 30px; text-align: center;">@item.seatsWithoutReimbursement</td>
                <td style="width: 30px; text-align: center;">@item.feeWithoutReimbursement</td>
                <td style="width: 30px; text-align: center;">@item.seatsWithReimbursement</td>
                <td style="width: 30px; text-align: center;">@item.feeWithReimbursement</td>
                <td style="width: 30px; text-align: center;">@item.NRISeats</td>
                <td style="width: 30px; text-align: center;">@item.totalNRIFee</td>
                <td style="width: 30px; text-align: center;">@item.PIOSeats</td>
                <td style="width: 30px; text-align: center;">@item.totalPIOFee</td>
                <td style="width: 20px; text-align: center;">
                    @Html.ActionLink("Edit", "AddEditRecord", new { id = item.id }, new { @class = "editDialog edit_button" })
                </td>
                <td style="width: 20px; text-align: center;">
                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "viewDialog view_button" })
                </td>
                <td style="width: 20px; text-align: center;">
                    @Html.ActionLink("Delete", "DeleteRecord", new { id = item.id }, new { @class = "confirmDialog delete_button" })
                </td>
            </tr>
        }

    </table>
        if (ViewBag.Count == 0)
        {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No records found</p>
    </div>
        }
    <div id="dialog-confirm" style="display: none">
        <p>
            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
            Are you sure to delete ?
        </p>
    </div>
    <div id="dialog-edit" style="display: none">
    </div>
    <div id="dialog-view" style="display: none">
    </div>

}