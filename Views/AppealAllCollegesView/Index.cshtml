                    @Html.ActionLink("PrincipalView", "CollegeFacultyWithIntakePrincipal", "AppealAllCollegesView", new { collegeID = UAAAS.Models.Utilities.EncryptString(@item.id.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]) }, new { @target = "_blank", @title = "Click here for AppealView" })
