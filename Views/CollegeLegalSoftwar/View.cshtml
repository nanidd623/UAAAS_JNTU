@model IList<UAAAS.Models.CollegeLegalSoftwarDetails>
@using UAAAS.Models
@{
    ViewBag.Title = "College Legal System Software & Legal Application Software";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}

@if (ViewBag.IsEditable == true)
{
    <h2>College Legal System Software & Legal Application Software</h2>
    <p class="create_link_right">
        @Html.ActionLink("Edit", "Edit", "CollegeLibrary", new { @class = "create_button" /* id=Model.PrimaryKey */ })
    </p>
}
else
{
    @*<p class="create_link_right">
        <input name="btnPrint" type="button" onclick="printdiv('div_print');" value=" Print" class="create_button">
    </p>*@
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".view_hide").show();
    });
    function printdiv(printpage) {
        $(".view_hide").hide();
        //Get the HTML of div
        var divElements = document.getElementById(printpage).innerHTML;
        //Get the HTML of whole page
        var oldPage = document.body.innerHTML;

        //Reset the page's HTML with div's HTML only
        document.body.innerHTML =
          "<html><head><title></title></head><body>" +
          divElements.fontsize(1) + "</body>";

        //Print Page
        window.print();

        //Restore orignal HTML
        document.body.innerHTML = oldPage;
        $(".view_hide").show();
        return false;
    }
</script>

<div id="div_print">
    @if (ViewBag.IsEditable == false)
    {
        <h2>College Legal System Software & Legal Application Software</h2>
    }
    @using (Html.BeginForm())
    {

        if (ViewBag.Norecords == true)
        {
        <div class="warning" style="width: 200px; margin: 0 auto;">
            <p>No Data found</p>
        </div>
        }
        else
        {    
        <table class="four_columns" style="width: 100%;">
            <tr style="font-weight: bold; width: 30%">
                <td style="text-align: left;" rowspan="2" class="col11">Degree</td>
                <td style="text-align: center;" colspan="2" class="col11">Available</td>
            </tr>
            <tr style="font-weight: bold;">
                <td style="text-align: center;" class="col11">System Software</td>
                <td style="text-align: center;" class="col11">Application Software</td>
            </tr>

            @for (int i = 0; i < ViewBag.Count; i++)
            {
                <tr>
                    <td style="text-align: left; width: 20%" class="col21">
                        @Html.LabelFor(m => m[i].degree, Model[i].degree == null ? string.Empty : Model[i].degree.ToString())
                        @Html.HiddenFor(m => m[i].degreeId)
                    </td>
                    <td style="text-align: center; width: 20%" class="col21">
                        @if (ViewBag.Update == true)
                        {
                            @Html.DisplayFor(m => m[i].availableSystemSoftware, new { Value = Model[i].availableSystemSoftware == 0 ? "0" : Model[i].availableSystemSoftware.ToString(), style = "text-align: center;" })
                        }
                        else
                        {
                            @Html.DisplayFor(m => m[i].availableSystemSoftware, new { Value = Model[i].availableSystemSoftware == 0 ? string.Empty : Model[i].availableSystemSoftware.ToString(), style = "text-align: center;" })
                        }
                    </td>
                    <td style="text-align: center; width: 20%" class="col21">
                        @if (ViewBag.Update == true)
                        {
                            @Html.DisplayFor(m => m[i].availableApplicationSoftware, new { Value = Model[i].availableApplicationSoftware == 0 ? "0" : Model[i].availableApplicationSoftware.ToString(), style = "text-align: center;" })
                        }
                        else
                        {
                            @Html.DisplayFor(m => m[i].availableApplicationSoftware, new { Value = Model[i].availableApplicationSoftware == 0 ? string.Empty : Model[i].availableApplicationSoftware.ToString(), style = "text-align: center;" })
                        }
                    </td>
                </tr>
            }
        </table>
            if (ViewBag.Count == 0)
            {
        <div class="warning" style="width: 550px; margin: 0 auto;">
            <p>Please select your courses in "College Information" page before filling up this page.</p>
        </div>
            }
        }
    }
</div>
