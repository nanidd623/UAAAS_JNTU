@model IList<UAAAS.Models.CollegeLegalSoftwarDetails>
@using UAAAS.Models
@{
    ViewBag.Title = "College Legal System Software & Legal Application Software";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
}

<h2>College Legal System Software & Legal Application Software</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    if (ViewBag.NotUpload == true)
    {
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
    }
    else
    {
        @*if (TempData["Error"] != null)
        {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
        }
        if (TempData["Success"] != null)
        {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
        }*@
    
    <table class="webGrid" style="width: 100%;">
        <tr style="font-weight: bold; width: 30%" class="gridHeader">
            <td style="text-align: left;" rowspan="2">Degree</td>
            <td style="text-align: center;" colspan="2">Available</td>
        </tr>
        <tr style="font-weight: bold;" class="gridHeader">
            <td style="text-align: center;">System Software</td>
            <td style="text-align: center;">Application Software</td>
        </tr>

        @for (int i = 0; i < ViewBag.Count; i++)
        {
            <tr>
                <td style="text-align: left; width: 20%" class="col2">
                    @Html.LabelFor(m => m[i].degree, Model[i].degree == null ? string.Empty : Model[i].degree.ToString())
                    @Html.HiddenFor(m => m[i].degreeId)
                    @Html.HiddenFor(m => m[i].collegeId)
                </td>
                <td style="text-align: center; width: 20%" class="col2">
                    @if (ViewBag.Update == true)
                    {
                        @Html.TextBoxFor(m => m[i].availableSystemSoftware, new { Value = Model[i].availableSystemSoftware == 0 ? "0" : Model[i].availableSystemSoftware.ToString(), style = "text-align: center;" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m[i].availableSystemSoftware, new { Value = Model[i].availableSystemSoftware == 0 ? string.Empty : Model[i].availableSystemSoftware.ToString(), style = "text-align: center;" })
                    }
                </td>
                <td style="text-align: center; width: 20%" class="col2">
                    @if (ViewBag.Update == true)
                    {
                        @Html.TextBoxFor(m => m[i].availableApplicationSoftware, new { Value = Model[i].availableApplicationSoftware == 0 ? "0" : Model[i].availableApplicationSoftware.ToString(), style = "text-align: center;" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m[i].availableApplicationSoftware, new { Value = Model[i].availableApplicationSoftware == 0 ? string.Empty : Model[i].availableApplicationSoftware.ToString(), style = "text-align: center;" })
                    }
                </td>
            </tr>
        }
    </table>
        if (ViewBag.Count == 0)
        {
    <div class="warning" style="width: 550px; margin: 0 auto;">
        <p>Please select your courses in "College Information" page before filling up this page.</p>
    </div>
        }
        else
        {
    <p class="right_buttons">
        <input type="submit" value="Save" />
    </p>
        }
    }
}