@using UAAAS.Models.Permanent_Affiliation
@model List<SelfAppraisalModel>
@{
    ViewBag.Title = "Self-appraisal of the College/Institute";
    Layout = "~/Views/Shared/_PALayoutLeftMenu.cshtml";
}

<!DOCTYPE html>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Self-appraisal of the College/ Institute (academic year wise for last six years with brochures/ photos/ certificates if any)</h2>
    <br />
    @if (TempData["Error"] != null)
    {
        <div class="error">
            <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="success">
            <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
        </div>
    }
    @if (Model.Count > 0)
    {
        <div>
            <table class="webGrid" style="background: whitesmoke;">
                <thead>
                    <tr class="col1">
                        <th>S.No</th>
                        <th>Self-Appraisal Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pay in Model.Select((value, i) => new { i = i + 1, value }))
                    {
                        <tr class="col2">
                            <td>@pay.i </td>
                            <td>@pay.value.Selfappraisaldescription</td>
                            @if (ViewBag.IsEditable == true)
                            {
                                <td style="vertical-align: middle;">
                                    @Html.ActionLink("Add", "AddCollegeSelfAppraisal", "PA_SelfAppraisal", new { @selfAppraisalId = @pay.value.Id }, new { @style = "color:white;", @class = "create_button AddDialog" })
                                    @if (@pay.value.CollegeSelfAppraisalsCount > 0)
                                    {
                                        @Html.ActionLink("View", "ViewCollegeSelfAppraisal", "PA_SelfAppraisal", new { @selfAppraisalId = @pay.value.Id }, new { @style = "color:white;", @class = "create_button viewDialog" })
                                    }
                                </td>
                            }
                            else
                            {
                                <td style="vertical-align: middle;">
                                    @if (@pay.value.CollegeSelfAppraisalsCount > 0)
                                    {
                                        @Html.ActionLink("View", "ViewCollegeSelfAppraisal", "PA_SelfAppraisal", new { @selfAppraisalId = @pay.value.Id }, new { @style = "color:white;", @class = "create_button viewDialog" })
                                    }
                                </td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $(".AddDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-add").dialog({
                title: 'Add College Self Appraisal',
                autoOpen: false,
                resizable: false,
                height: 350,
                width: 700,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                closeOnEscape: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                close: function (event, ui) {
                    window.location.href = "/PA_SelfAppraisal/Index";
                }
            });
            $("#dialog-add").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View College Self Appraisal',
                autoOpen: false,
                resizable: false,
                height: 500,
                width: 900,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                buttons: {
                    "Close": function () {
                        window.location.href = "/PA_SelfAppraisal/Index";
                    }
                },
                close: function (event, ui) {
                    window.location.href = "/PA_SelfAppraisal/Index";
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });
    });
</script>
<div id="dialog-confirm" style="display: none"></div>
<div id="dialog-add" style="display: none"></div>
<div id="dialog-view" style="display: none"></div>
<div id="dialog-confirmDir" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Are you sure to delete ?
    </p>
</div>

