@model UAAAS.Models.Permanent_Affiliation.SanctionedDetailsModel

@{
    Layout = "~/Views/Shared/_PALayoutLeftMenu.cshtml";
    ViewBag.Title = "Sanctioned Intake List";
}
<h2>Sanctioned Intake List</h2>

@if (ViewBag.IsEditable == true)
{
    <p class="create_link_right">
        @Html.ActionLink("Edit", "Edit", "PA_SanctionedDetails", new { @class = "create_button" })
    </p>
}
@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

@if (ViewBag.SanctionedDetailsList.Count > 0)
{
    <div style="margin-top:15px;">
        <table class="webGrid">
            <thead class="col1">
                <tr>
                    <th>S.No</th>
                    <th>Academic Year</th>
                    <th>Degree</th>
                    <th>Department</th>
                    <th>Specialization</th>
                    <th>Sanctioned Intake by JNTUH</th>
                    <th>Approved Intake by PCI</th>
                    <th>Approved Intake by AICTE</th>
                </tr>
            </thead>
            <tbody class="col2">
                @foreach (var pay in ((List<UAAAS.Controllers.Permanent_Affiliation.SanctionedDetails>)ViewBag.SanctionedDetailsList).Select((value, i) => new { i = i + 1, value }))
                {
                    <tr>
                        <td>@pay.i </td>
                        <td>@pay.value.AcademicYear</td>
                        <td>@pay.value.Degree</td>
                        <td>@pay.value.Department</td>
                        <td>@pay.value.Specialization</td>
                        <td>@pay.value.JNTUHSanctioned</td>
                        <td>@pay.value.PCISanctioned</td>
                        <td>@pay.value.AICTESanctioned</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No Data found</p>
    </div>
}