@model UAAAS.Models.Permanent_Affiliation.SanctionedDetailsModel

@{
    Layout = "~/Views/Shared/_PALayoutLeftMenu.cshtml";
    ViewBag.Title = "Sanctioned Details";
}
@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div><br />
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div><br />
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

<script>
    $(document).ready(function () {

        $("#degreeId").change(function () {
            var DegreeID = $(this).val();
            GetDepartments(DegreeID);
        });

        $("#DepartmentId").change(function () {
            var DepartmentID = $(this).val();
            GetSpecialization(DepartmentID);
        });

        function GetDepartments(DegreeID){
            $.getJSON("/PA_SanctionedDetails/GetDepartments",{ id : DegreeID},
                function(departmentsData){
                    var select = $("#DepartmentId");
                    select.empty();
                    select.append($('<option/>',{
                        value: '',
                        text: '---Select---'
                    }));
                    var select1 = $("#specializationId");
                    select1.empty();
                    select1.append($('<option/>',{
                        value: '',
                        text: '---Select---'
                    }));
                    if(departmentsData.length>0){
                        $("#row_DepartmentId").attr('style', 'display: block');
                        $("#row_DepartmentId").attr('style', 'width: 100%');

                        $("#row_specializationId").attr('style', 'display: block');
                        $("#row_specializationId").attr('style', 'width: 100%');

                        $.each(departmentsData,function(index, itemdata){
                            select.append($('<option/>',{
                                value: itemdata.Value,
                                text: itemdata.Text,
                                selected: (itemdata.Value == @Model.DepartmentId ? true : false)
                            }));
                        });
                    }
                    else
                    {
                        $("#row_DepartmentId").attr('style', 'display: none');
                        $("#row_specializationId").attr('style', 'display: none');
                    }
                });
        }

        function GetSpecialization(DepartmantID){
            $.getJSON("/PA_SanctionedDetails/GetSpecialization" ,{id : DepartmantID},
                function(specializationdata){
                    var select = $("#specializationId");
                    select.empty();
                    select.append($('<option/>',{
                        value: '',
                        text: '---Select---'
                    }));
                    if(specializationdata.length>0){
                        $("#row_specializationId").attr('style', 'display: block');
                        $("#row_specializationId").attr('style', 'width: 100%');

                        $.each(specializationdata,function(index, itemdata){
                            select.append($('<option/>',{
                                value: itemdata.Value,
                                text: itemdata.Text,
                                selected: (itemdata.Value == @Model.SpecializationId ? true : false)
                            }));
                        });
                    }
                    else{
                        $("#row_specializationId").attr('style', 'display: none');
                    }
                });
        }

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: '',
            autoOpen: false,
            resizable: false,
            height: 500,
            //height: 550,
            //width: 820,
            width: 720,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $(".confirmDialog").live("click", function (e) {
            debugger;
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Sanctioned Intake',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;
                    },
                    "No": function () {
                        $(this).dialog("close");
                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });
    });
</script>

<h2>Sanctioned Intake</h2><br />

@using (Html.BeginForm("Edit", "PA_SanctionedDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.IntakesId, new { @Value = Model.IntakesId })
    @Html.HiddenFor(model => model.CollegeId, new { @Value = Model.CollegeId })
    @Html.HiddenFor(model => model.AcademicYearId, new { @Value = Model.AcademicYearId })

    <table class="webGrid" style="width: 100%;">
        <tr>
            <td class ="col1">
                @Html.LabelFor(model => model.YearOfEstablishment)
            </td>
            <td class="col2">
                @Html.DisplayFor(model=>model.YearOfEstablishment)
                @Html.ValidationMessageFor(model => model.YearOfEstablishment)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.AcademicYear)
            </td>
            <td class="col2">
                @Html.DropDownListFor(model => model.AcademicYear, new SelectList(ViewBag.AcademicYears as System.Collections.IEnumerable, "value", "text"), "---Select---", new { @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.AcademicYear)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.DegreeId)
            </td>
            <td class="col2">
                @Html.DropDownListFor(model => model.DegreeId, new SelectList(ViewBag.Degrees as System.Collections.IEnumerable, "id", "degree"), "---Select---", new { @id = "degreeId", @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.DegreeId)
            </td>
        </tr>
        <tr id="row_DepartmentId">
            <td class="col1">
                @Html.LabelFor(model => model.DepartmentId)
            </td>
            <td class="col2">
                @Html.DropDownListFor(model => model.DepartmentId, new SelectList(Enumerable.Empty<SelectListItem>(), "DepartmentId", "Department"), "---Select---", new { @id = "DepartmentId", @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </td>
        </tr>
        <tr id="row_specializationId">
            <td class="col1">
                @Html.LabelFor(model => model.SpecializationId)
            </td>
            <td class="col2">
                @Html.DropDownListFor(model => model.SpecializationId, new SelectList(Enumerable.Empty<SelectListItem>(), "specializationId", "specialization"), "---Select---", new { @id = "specializationId", @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.SpecializationId)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.JNTUHSanctioned)
            </td>
            <td class="col2">
                @Html.TextBoxFor(model => model.JNTUHSanctioned, new { onkeypress = "return isNumberKey(event)", @placeholder = "Enter Sanctioned Intake by JNTUH", @class = "required", @style = "width:212px" })
                @Html.ValidationMessageFor(model => model.JNTUHSanctioned)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.PCISanctioned)
            </td>
            <td class="col2">
                @Html.TextBoxFor(model => model.PCISanctioned, new { onkeypress = "return isNumberKey(event)", @placeholder = "Enter Approved Intake by PCI", @style = "width:212px" })
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.AICTESanctioned)
            </td>
            <td class="col2">
                @Html.TextBoxFor(model => model.AICTESanctioned, new { onkeypress = "return isNumberKey(event)", @placeholder = "Enter Approved Intake by AICTE", @class = "required", @style = "width:212px" })
                @Html.ValidationMessageFor(model => model.AICTESanctioned)
            </td>
        </tr>
    </table>

    <div style="text-align: right">
        <p>
            <input type="submit" value="Add" id="btnAdd" name="cmd" class="btnclass" />
        </p>
    </div>
}
<br />
@if (ViewBag.SanctionedDetailsList.Count > 0)
{
    <div style="margin-top:15px;">
        <h2>Sanctioned Intake List</h2><br />
        <table class="webGrid">
            <thead class="col1">
                <tr>
                    <th>S.No</th>
                    <th>Academic Year</th>
                    <th>Degree</th>
                    <th>Department</th>
                    <th>Specialization</th>
                    <th>Sanctioned Intake by JNTUH</th>
                    <th>Approved Intake by PCI</th>
                    <th>Approved Intake by AICTE</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody class="col2">
                @foreach (var pay in ((List<UAAAS.Controllers.Permanent_Affiliation.SanctionedDetails>)ViewBag.SanctionedDetailsList).Select((value, i) => new { i = i + 1, value }))
                {
                    <tr>
                        <td>@pay.i </td>
                        <td>@pay.value.AcademicYear</td>
                        <td>@pay.value.Degree</td>
                        <td>@pay.value.Department</td>
                        <td>@pay.value.Specialization</td>
                        <td>@pay.value.JNTUHSanctioned</td>
                        <td>@pay.value.PCISanctioned</td>
                        <td>@pay.value.AICTESanctioned</td>
                        @if (ViewBag.IsEditable == true)
                        {
                            <td>
                                @Html.ActionLink("Delete", "Delete", "PA_SanctionedDetails", new
                    {
                        collegeId = UAAAS.Models.Utilities.EncryptString(pay.value.CollegeId.ToString(),
                                    System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]).ToString(),

                        intakesId = UAAAS.Models.Utilities.EncryptString(pay.value.IntakesId.ToString(),
                        System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]).ToString(),
                    }, new { @class = "confirmDialog delete_button" })
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert"></span>
        Are you sure to delete this Sanctioned Intake ?
    </p>
</div>