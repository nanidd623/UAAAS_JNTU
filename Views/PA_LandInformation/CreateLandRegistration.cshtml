@using (Ajax.BeginForm("AddEditRecord", "PA_LandInformation", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "LandInformationDialog" }))
{
    @Html.ValidationSummary(true)
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }    
    <div class="details_table">
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.id)
        }
        <div class="editor-label" style="width: 250px">
            Land Registraion Date
        </div>
        <div class="editor-field focus" style="width: 440px">
            @Html.TextBoxFor(model => model.landRegistraionDate, new { @class = "calendar1", style = "width: 80px", @onblur = "IsValidDate(this,event.keyCode,0,0,1)", @onkeydown = "return IsValidFormat(this,event.keyCode)" }) <span>(DD/MM/YYYY)</span>
            @Html.HiddenFor(model => model.collegeId, new { @Value = Model.collegeId })
            @Html.ValidationMessageFor(model => model.landRegistraionDate)
        </div>
        <div class="editor-label" style="width: 250px">
            @Html.LabelFor(model => model.landAreaInAcres)
        </div>
        <div class="editor-field" style="width: 440px">
            @Html.EditorFor(model => model.landAreaInAcres)
            @Html.ValidationMessageFor(model => model.landAreaInAcres)
        </div>
        <div class="editor-label" style="width: 250px">
            @Html.LabelFor(model => model.landDocumentNumber)
        </div>
        <div class="editor-field" style="width: 440px">
            @Html.EditorFor(model => model.landDocumentNumber)
            @Html.ValidationMessageFor(model => model.landDocumentNumber)
        </div>
        <div class="editor-label" style="width: 250px">
            @Html.LabelFor(model => model.landSurveyNumber)
        </div>
        <div class="editor-field" style="width: 440px">
            @Html.EditorFor(model => model.landSurveyNumber)
            @Html.ValidationMessageFor(model => model.landSurveyNumber)
        </div>
        <div class="editor-label" style="width: 250px">
            @Html.LabelFor(model => model.landLocation)
        </div>
        <div class="editor-field" style="width: 440px">
            @Html.EditorFor(model => model.landLocation)
            @Html.ValidationMessageFor(model => model.landLocation)
        </div>
        @Html.HiddenFor(model => model.createdOn)
        @Html.HiddenFor(model => model.createdBy)
        <div style="text-align: center">
            <p>
                @if (ViewBag.IsUpdate == true)
                {
                    <input type="submit" value="Save" id="btnSave" name="cmd" />                    
                }
                else
                {
                    <input type="submit" value="Add" id="btnAdd" name="cmd" />
                }
            </p>
        </div>
    </div>
}sss