@model IEnumerable<UAAAS.Models.CollegeDocuments>
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    }
    ViewBag.Title = "College Photos";
    int num = 1;
}
<h2>College Photos</h2>
<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit Photo',
            autoOpen: false,
            resizable: false,
            height: 400,
            width: 500,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Photo'
            });
            url = $("#openDialog").attr('href');

            $myDialog.dialog('open');
            return false;
        });

        $('.full_table').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit Photo'
            });

            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Photo',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Fee Reimbursement',
                autoOpen: false,
                resizable: false,
                height: 600,
                width: 650,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
@if (ViewBag.NotUpload == true)
{
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    if (TempData["FeeError"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["FeeError"].ToString()</p>
    </div>
    }
    if (TempData["CollegesSuccess"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["CollegesSuccess"].ToString()</p>
    </div>
    }
    <table style="width: 100%;">
        <tr>
            <td class="create_link_right" style="width: 200px;">
                @Html.ActionLink("Add Photo", "AddEditRecord", "CollegeDocuments", new { collegeId = @ViewBag.collegeId }, new { @id = "openDialog", @class = "create_button" })
            </td>
        </tr>
    </table>
    <table class="full_table" style="width: 100%;">
        <tr>
            <th style="text-align: center;">S.No
            </th>
            <th>Name of Photo
            </th>
            <th style="text-align: center;">Photo
            </th>
            <th colspan="2" style="text-align: center;"></th>
        </tr>

        @foreach (var item in ViewBag.CollegeDocuments as List<UAAAS.Models.CollegeDocuments>)
        {
            <tr>
                <td style="width: 30px; text-align: center; vertical-align: top;">
                    @(num++)
                </td>
                <td style="vertical-align: top;">@item.documentName</td>
                <td style="width: 50px; vertical-align: top; text-align: center;">
                    @if (item.scannedCopy != null)
                    {
                        <a target="_blank" href="@item.scannedCopy.Replace("~", "..")">
                            <img src="@item.scannedCopy.Replace("~", "..")" style="height: 60px; text-align: center;" />
                        </a>
                    }
                </td>
                <td style="width: 20px; text-align: center; vertical-align: top;">
                    @Html.ActionLink("Edit", "AddEditRecord", new { id = item.id }, new { @class = "editDialog edit_button" })
                </td>
                @*<td style="width: 20px; text-align: center; vertical-align: top;">
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "viewDialog view_button" })
            </td>*@
                <td style="width: 20px; text-align: center; vertical-align: top;">
                    @Html.ActionLink("Delete", "DeleteRecord", new { id = item.id }, new { @class = "confirmDialog delete_button" })
                </td>
            </tr>
        }

    </table>
        if (ViewBag.Count == 0)
        {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No records found</p>
    </div>
        }
    <div id="dialog-confirm" style="display: none">
        <p>
            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
            Are you sure to delete ?
        </p>
    </div>
    <div id="dialog-edit" style="display: none">
    </div>
    <div id="dialog-view" style="display: none">
    </div>
}
