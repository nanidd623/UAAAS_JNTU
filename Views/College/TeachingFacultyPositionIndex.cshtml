@model IEnumerable<UAAAS.Models.TeachingFacultyPosition>
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    }
    
    ViewBag.Title = "Teaching Faculty Position (Department-wise)";
    int num = 1;
}

<h2>Teaching Faculty Position (Department-wise)</h2>

@if (ViewBag.NotUpload == true)
{

}
else
{
    <p class="create_link_right">
        @Html.ActionLink("Add Teaching Faculty Position", "TeachingFacultyPositionAddOrEdit", "TeachingFacultyPosition", new { collegeId = @ViewBag.collegeId }, new { @id = "openDialog", @class = "create_button" })
    </p>
}
@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}
@if (ViewBag.NotUpload == true)
{
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    <table class="full_table" style="width: 100%; font-size: 0.7rem;">
        <tr>
            <th style="text-align: center;" rowspan="2" colspan="1">S.No
            </th>
            <th style="text-align: center;" rowspan="2" colspan="1">Degree
            </th>
            <th style="text-align: center;" rowspan="2" colspan="1">Department
            </th>
            <th style="text-align: center;" colspan="3">Specialization being offered by the
                <br />
                department 
            </th>
            <th style="text-align: center; width: 15%" colspan="3">No. of Faculty
                <br />
                Members available in
                <br />
                the Department on
                <br />
                full-time basis
            </th>
            <th style="text-align: center;" colspan="1" rowspan="2">No. of
                <br />
                faculty
                <br />
                ratified
                <br />
                by<br />
                University
            </th>
            <th style="text-align: center;" colspan="1" rowspan="2">Faculty
                <br />
                Student<br />
                Ratio
            </th>
            <th style="text-align: center;" colspan="1" rowspan="2"></th>
            <th style="text-align: center;" colspan="1" rowspan="2"></th>
        </tr>
        <tr>
            <th style="text-align: center;" colspan="1">Specialization 
            </th>
            <th style="text-align: center;" colspan="1">Shift
            </th>
            <th style="text-align: center;" colspan="1">Intake 
            </th>
            <th style="text-align: center; width: 5%" colspan="1">Prof. 
            </th>
            <th style="text-align: center; width: 5%" colspan="1">Assoc
                <br />
                Prof. 
            </th>
            <th style="text-align: center; width: 5%" colspan="1">Asst<br />
                Prof. 
            </th>
        </tr>
        @foreach (var item in ViewBag.TeachingFacultyPosition as List<UAAAS.Models.TeachingFacultyPosition>)
        {
            <tr>
                <td style="text-align: center;" colspan="1">
                    @(num++)
                </td>
                <td style="text-align: left;" colspan="1">
                    @item.degreeName
                </td>
                <td style="text-align: left;" colspan="1">
                    @item.departmentName
                </td>
                <td style="text-align: left;" colspan="1">
                    @item.specializationName
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.shiftName
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.intake
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.professors
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.assocProfessors
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.asstProfessors
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.ratified
                </td>
                <td style="text-align: center;" colspan="1">
                    @item.facultyStudentRatio
                </td>
                <td style="width: 20px; text-align: center;">
                    @Html.ActionLink("Edit", "TeachingFacultyPositionAddOrEdit", "TeachingFacultyPosition", new { id = item.id }, new { @class = "editDialog edit_button" })
                </td>
                <td style="width: 20px; text-align: center;">
                    @Html.ActionLink("Delete", "TeachingFacultyPositionDelete", "TeachingFacultyPosition", new { id = item.id }, new { @class = "confirmDialog delete_button" })
                </td>
            </tr>
        }
    </table>

        if (ViewBag.Count == 0)
        {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No records found</p>
    </div>
        }
    <div id="dialog-confirm" style="display: none">
        <p>
            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
            Are you sure to delete ?
        </p>
    </div>
    <div id="dialog-edit" style="display: none">
    </div>
    <div id="dialog-view" style="display: none">
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit Teaching Faculty Position',
            autoOpen: false,
            resizable: false,
            height: 450,
            width: 600,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {

            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Teaching Faculty Position'
            });
            url = $("#openDialog").attr('href');

            $myDialog.dialog('open');
            return false;
        });

        $('.full_table').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit Teaching Faculty Position'
            });
            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Teaching Faculty Position',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;
                    },
                    "No": function () {
                        $(this).dialog("close");
                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Teaching Faculty Position',
                autoOpen: false,
                resizable: false,
                height: 450,
                width: 600,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
