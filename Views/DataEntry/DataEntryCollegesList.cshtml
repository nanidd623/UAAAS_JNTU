        </thead>
        <tbody>

            @foreach (var item in ViewBag.DataEntryList as List<UAAAS.Models.DataEntryCollegesList>)
            {                
                <tr>
                    <td style="width: 50px; text-align: center;">
                        @(sno++)
                    </td>
                    <td>
                        @item.userName
                    </td>
                    <td>
                        @item.collegeName
                    </td>
                    <td style="text-align: center;">
                        @if (@item.isActive == true)
                        {
                            @*<span>Yes</span>*@
                            <img src="/Content/images/active.png" alt="JNTU Hyderabad Logo" />
                        }
                        else
                        {
                            @*<span>No</span>*@
                            <img src="/Content/images/inactive.png" alt="JNTU Hyderabad Logo" />
                        }
                    </td>
                    <td style="text-align: center;">
                        @if (@item.isCompleted == true)
                        {
                            <span>Completed</span>
                        }
                        else
                        {
                            <span>Pending</span>
                        }
                    </td>                   
                    <td style="width: 30px; text-align: center;">
                        @Html.ActionLink("Edit", "DataEntryCreateCollegesList", "DataEntry", new { id = item.id }, new { @class = "editDialog edit_button" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
