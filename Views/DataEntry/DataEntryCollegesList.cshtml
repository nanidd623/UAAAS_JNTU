{
    <table style="width: 100%">
        <tr>
            <td class="create_link_right">
                @Html.ActionLink("AddEditRecord", "DataEntryCreateCollegesList", "DataEntry", new { @id = "openDialog", @class = "create_button" })
            </td>
        </tr>
    </table>
    <table id="example" class="display">
        <thead>
            <tr>
                <th style="width: 50px; text-align: center;">S.No
                </th>
                <th style="width: 150px; text-align: left;">User
                </th>
                <th style="width: 250px; text-align: left;">College
                </th>
                <th class="ui-state-default" style="width: 70px; text-align: center;">Status
