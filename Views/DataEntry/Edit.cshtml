@model UAAAS.Controllers.usersdata
@{
    ViewBag.Title = "Edit User login details";
}

<h2>Edit User login details</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    if (TempData["Error"] != null)
    {
        <div class="error">
            <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
        </div>
    }
    if (TempData["Success"] != null)
    {
        <div class="success">
            <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
        </div>
    }

    <div class="details_table">

        @Html.HiddenFor(model => model.userid)

        <div class="editor-label">
            <span>User Name</span>
        </div>
        <div class="editor-field">
            @Html.DisplayFor(m => m.username, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.username)
            @Html.HiddenFor(model => model.username)
        </div>

        <div class="editor-label">
            <span>User Email</span>
        </div>
        <div class="editor-field">
            @Html.DisplayFor(m => m.usermail)
            @Html.ValidationMessageFor(m => m.usermail)
            @Html.HiddenFor(model => model.usermail)
        </div>

        <div class="display-label">
            Islockout
        </div>
        <div class="display-field">
            @*@Html.DisplayFor(m => m.isApproved)*@
            <label>@Html.RadioButtonFor(model => model.islockout, false) Active</label>
            <label>@Html.RadioButtonFor(model => model.islockout, true) Inactive</label>
            @Html.ValidationMessageFor(model => model.islockout)
        </div>

    

        @*<div class="editor-label">
            <span>Role</span>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.SelectedRole, ViewData["Roles"] as SelectList, "-- Select --", new { id = "Roles" })
            @Html.ValidationMessageFor(m => m.SelectedRole)
        </div>*@

        <div class="editor-label last-row">
            &nbsp;
        </div>
        <div class="editor-field last-row">
            <p>
                @Html.ActionLink("Back", "DataEntryLogins", null, new { @class = "back_button" })
                <input type="submit" value="Save" />
            </p>
        </div>
        <div class="clear"></div>
    </div>
}
