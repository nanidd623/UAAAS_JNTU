@model UAAAS.Models.OtherCollegesSameSociety
@{
    ViewBag.Title = "Add Other College Same Society";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
}

<h2>Add Other College Same Society</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#tr1").hide();
        $("#tr2").hide();

        ShowHide();

        $("#University").change(function () {
            ShowHide();
        });

        function ShowHide() {
            if ($("#University option:selected").text() == "Other") {
                $("#tr1").show();
                $("#tr2").show();
            }
            else {
                $("#tr1").hide();
                $("#tr2").hide();
            }
        }
    });
</script>

@using (Html.BeginForm("AddEditRecord", "OtherCollegesSameSociety"))
{
    @Html.ValidationSummary(true)
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }
    
    <div class="details_table">

        <div class="editor-label">
            @Html.LabelFor(model => model.collegeName) & Address
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.collegeName)
            @Html.HiddenFor(model => model.collegeId, new { @Value = Model.collegeId })
            @Html.ValidationMessageFor(model => model.collegeName)
        </div>
                
        <div class="editor-label">
            @Html.LabelFor(model => model.yearOfEstablishment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.yearOfEstablishment)
            @Html.ValidationMessageFor(model => model.yearOfEstablishment)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.collegeLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.collegeLocation)
            @Html.ValidationMessageFor(model => model.collegeLocation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.affiliatedUniversityId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.affiliatedUniversityId,
                new SelectList(ViewBag.University, "id", "universityName"),
                "-- Select --", new { id = "University" })
            @Html.ValidationMessageFor(model => model.affiliatedUniversityId)
        </div>

        <div class="editor-label" id="tr1">
            @Html.LabelFor(model => model.otherUniversityName)
        </div>
        <div class="editor-field" id="tr2">
            @Html.EditorFor(model => model.otherUniversityName)
            @Html.ValidationMessageFor(model => model.otherUniversityName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.isActive)
        </div>
        <div class="editor-field">
            <label>@Html.RadioButtonFor(model => model.isActive, true) Active</label>
            <label>@Html.RadioButtonFor(model => model.isActive, false) Inactive</label>
            @Html.ValidationMessageFor(model => model.isActive)
        </div>

        <div class="display-label last-row">&nbsp;</div>
        <div class="display-field last-row">
            <p>
                @Html.ActionLink("Back", "Index","OtherColleges", null, new { @class = "back_button" })

                @if (ViewBag.IsUpdate == true)
                {
                    <input type="submit" value="Update" id="btnUpdate" name="cmd" class="create_button" />
                }
                else
                {
                    <input type="submit" value="Save" id="btnSave" name="cmd" class="create_button" />
                }
            </p>
        </div>
    </div>
    
   
}

