@model List<UAAAS.Models.PharmacyReportsClass>
@{
    int Count = 1;
}
<table border="1" style="width: 100%">
    <thead>
        <tr>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                S.No
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                College Code
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                College Name
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Address
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Dist.
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Course
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Proposed Intake for the A.Y 2019-20
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                JNTUH approved intake for the A.Y 2019-20
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Required Faculty
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Available Faculty
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                PhD Faculty
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.OrderBy(a => a.CollegeName).ThenBy(q=>q.SpecializationId).ToList())
            {
                <tr>
                    <td style="text-align: center;">@(Count++)</td>
                    <td style="text-align: center;">@item.CollegeCode</td>
                    <td>@item.CollegeName</td>
                    <td>@item.address</td>
                    <td>@item.district</td>
                    <td>@item.Degree - @item.Specialization -@item.ShiftId</td>
                    <td style="text-align: center;">@item.ProposedIntake</td>
                    <td style="text-align: center;">@item.JntuhApprovedIntake</td>
                    <td style="text-align: center;">@item.NoOfFacultyRequired</td>
                    <td style="text-align: center;">@item.NoOfAvilableFaculty</td>
                    <td style="text-align: center;">@item.PHdFaculty</td>
                </tr>
            }
        }

    </tbody>
</table>