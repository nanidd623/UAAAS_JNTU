                            <tr>
                                <td class="col1">
                                    <label for="Email_Support">Email Support</label>
                                </td>
                                <td class="col2">
                                    <b>supportaac@jntuh.ac.in</b>
                                </td>
                            </tr>
                            <tr>
                                <td class="col1">
                                    <label for="Mobile">Mobile</label>
                                </td>
                                <td class ="col2">
