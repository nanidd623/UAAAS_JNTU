                            <tr>
                                <td class="col1">
                                    <label for="Land">Land</label>
                                </td>
                                <td class="col2">
                                    <b>040 - 23150010</b>
                                </td>
                            </tr>
                        </table>*@                       
                    </div>
                </td>
            </tr>          
        </table>
    }
