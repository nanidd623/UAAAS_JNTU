@model UAAAS.Models.ChangeuserName

@{
    ViewBag.Title = "ChangeUserName";
}

<h2>Change User Id</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@if (TempData["Error"] != null)
{
<div class="error">
<p><strong>Error:</strong> @TempData["Error"].ToString()</p>
</div>
}
@if (TempData["Success"] != null)
{
<div class="success">
<p><strong>Success:</strong> @TempData["Success"].ToString()</p>
</div>
}

<div>
@using (Html.BeginForm())
{
    <div style="min-height:330px">
        <div class="details_table">

            <div class="editor-label">
                @Html.LabelFor(m => m.RegistrationNumber)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.RegistrationNumber, new {@class = "required", @maxlength = "20"})
                @Html.ValidationMessageFor(m => m.RegistrationNumber)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.OldEmailId)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.OldEmailId, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.OldEmailId)
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.NewEmailId)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NewEmailId, new {@class = "required"})
                @Html.ValidationMessageFor(m => m.NewEmailId)
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmEmailId)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ConfirmEmailId)
                @Html.ValidationMessageFor(m => m.ConfirmEmailId)
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.DateofBirth)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.DateofBirth, new {@class = "required", @placeholder = "MM/DD/YYYY"})
                @Html.ValidationMessageFor(m => m.DateofBirth)
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.PanNumber)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.PanNumber, new { @class = "required", @maxlength = "20" })
                @Html.ValidationMessageFor(m => m.PanNumber)
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.MobileNo)&nbsp;<span class="mandatory">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.MobileNo, new { @class = "required", @maxlength = "10" })
                @Html.ValidationMessageFor(m => m.MobileNo)
            </div>

            <div class="display-label last-row">
                &nbsp;
            </div>
            <div class="display-field last-row">
                <p><input type="submit" id="checkreg" value="Change UserId" /></p>
            </div>
            <div class="clear"></div>
        </div>
    </div>
}
</div>