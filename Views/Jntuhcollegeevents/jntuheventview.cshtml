@using (Html.BeginForm("jntuheventview", "Jntuhcollegeevents", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.HiddenFor(m => m.id)
    </div>
    <table class="webGrid" style="width: 100%;">
        <tr>
            <th class="col11" style="width:250px; max-width:250px; word-break:break-all;">
                Type Of Event
            </th>
            <th class="col11" style="width:150px; max-width:150px; word-break:break-all;">
                From Date
            </th>
            <th class="col11" style="width:150px; max-width:150px; word-break:break-all;">
                To Date
            </th>
            <th class="col11" style="width:350px; max-width:350px; word-break:break-all;">
                Remarks
            </th>
            <th class="col11" style="width:100px; max-width:100px; word-break:break-all;">
                Supporting file
            </th>
            <th class="col11" style="width:50px; max-width:50px; word-break:break-all;">
                Edit
            </th>
        </tr>
        <tbody>
            @foreach (var eventDetails in ViewBag.objeventtypeDetails)
            {
                <tr class="col2">
                    <td style="width:250px; max-width:250px; word-break:break-all;">
                        @if (eventDetails.eventtype != null)
                        {
                            @eventDetails.eventtype
                        }
                    </td>
                    <td style="width:150px; max-width:150px; word-break:break-all;">
                        @if (eventDetails.fromdate != null)
                        {
                            @eventDetails.fromdate

                        }
                    </td>
                    <td style="width:150px; max-width:150px; word-break:break-all;">
                        @if (eventDetails.todate != null)
                        {
                            @eventDetails.todate
                        }
                    </td>
                    <td style="width:350px; max-width:350px; word-break:break-all;">
                        @if (eventDetails.remarks != null)
                        {
                            <span>
                                @eventDetails.remarks
                            </span>

                        }
                    </td>
                    <td style="width:100px; max-width:100px; word-break:break-all;">
                        @if (eventDetails.supportingdocuments != null)
                        {
                            <a href="../Content/Upload/College/Event/@eventDetails.supportingdocuments.Replace("~", "")" target="_blank">

                                <span style="font-weight:bold;color:red">View</span>
                            </a>

                        }
                    </td>
                    <td style="width:50px; max-width:50px; word-break:break-all;">

                        @Html.ActionLink("Edit", "_JntuhcollegeEdit", "Jntuhcollegeevents", new { id = eventDetails.id }, new { @class = "editdilog edit_button" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

