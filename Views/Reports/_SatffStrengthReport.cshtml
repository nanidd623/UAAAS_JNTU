@using UAAAS.Models
@{
    int sno = 1;
}
@using (Html.BeginForm())
{     
    <table border="1" style="width:100%">
        <thead>
            <tr>
                <th style="text-align: center;background-color:yellow;vertical-align:top">S.No</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top">College Code</th>
                <th style="text-align: left;background-color:yellow;vertical-align:top">College Name</th>
                <th style="text-align: left;background-color:yellow;vertical-align:top">Degree</th>
                <th style="text-align: left;background-color:yellow;vertical-align:top">Department</th>
                <th style="text-align: left;background-color:yellow;vertical-align:top">Specialization</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top">Professors</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top ">Asso Professors</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top ">Assis Professors</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top">Students</th>
                <th style="text-align: center;background-color:yellow;vertical-align:top ">Ratio</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.satffStrengthReportList)
            { 
                <tr>
                    <td style="text-align: center;vertical-align:top">
                        @(sno++)
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.collegeCode
                    </td>
                    <td style="text-align: left;vertical-align:top">
                        @item.collegeName
                    </td>
                    <td style="text-align: left;vertical-align:top">
                        @item.degree
                    </td>
                    <td style="text-align: left;vertical-align:top">
                        @item.department
                    </td>
                    <td style="text-align: left;vertical-align:top">
                        @item.specialization
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.professors
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.assoProfessors
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.assisProfessors
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.intake
                    </td>
                    <td style="text-align: center;vertical-align:top">
                        @item.ratio
                    </td>
                </tr>
            }
        </tbody>        
    </table>      
}





