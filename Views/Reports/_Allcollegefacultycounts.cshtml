@model List<UAAAS.Controllers.Reports.DeficiencyReportWordController.CollegeFacultyWithIntakeReport>
@{
    int count = 0;
}
@using (Html.BeginForm())
{
    <table border="1" width="100%">
        <thead>
            <tr>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Sl.No
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    College Code
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    College Name
                </th>

                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Degree
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Department
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Specilization
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Required Faculty
                </th>
                <th style="text-align: center; background-color: yellow; vertical-align: top">
                    Available Faculty
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center;vertical-align: top">
                        @(count = count + 1)
                    </td>
                    <th style="text-align: center; vertical-align: top">
                        '@item.collegeCode
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.collegeName
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.Degree
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.Department
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.Specialization
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.requiredFaculty
                    </th>
                    <th style="text-align: center; vertical-align: top">
                        @item.adjustedFaculty
                    </th>

                </tr>
            }

        </tbody>
    </table>
}