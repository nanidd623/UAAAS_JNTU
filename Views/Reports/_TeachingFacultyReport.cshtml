@model IEnumerable<UAAAS.Models.CollegeFaculty>
@using (Html.BeginForm())
{
    int count = 0;     
    <table border="1" style="width: 100%">
        <tr>
            <th style="text-align: center; vertical-align: top; background-color: yellow;">S.No
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">First Name
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Last Name
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">SurName
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Father's Name
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Gender
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">DOB
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Department
            </th>          
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Designation
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Other Designation
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Date Of Appointment
            </th>
            <th style="text-align: center; vertical-align: top; background-color: yellow;">Ratified By JNTU
            </th>
            <th style="text-align: right; vertical-align: top; background-color: yellow;">Salary
            </th>
            <th style="text-align: right; vertical-align: top; background-color: yellow;">Pay Scale
            </th>
            <th style="text-align: right; vertical-align: top; background-color: yellow;">Exp(Years)
            </th>
            <th style="text-align: center; vertical-align: top; background-color: yellow;">Mobile No
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Email
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">PAN No
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Aadhaar No
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">SSC
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Inter
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">UG
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">PG
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Mphil
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">Phd
            </th>
            <th style="text-align: left; vertical-align: top; background-color: yellow;">PostDoc
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center;">
                    @(count = count + 1)
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label style="text-transform: uppercase">@item.facultyFirstName</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyLastName</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultySurname</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyFatherName</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    @if (@item.facultyGenderId == 1)
                    {
                        <label>Male</label>
                    }
                    else
                    {
                        <label>FeMale</label>
                    }
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.dateOfBirth</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.department</label>
                </td>                              
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.designation</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyOtherDesignation</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.dateOfAppointment</label>
                </td>
                <td style="text-align: center; vertical-align: top;">
                    @if (item.isFacultyRatifiedByJNTU == true)
                    { <span>Yes</span>}
                    else
                    {<span>No</span>}
                </td>
                <td style="text-align: right; vertical-align: top;">
                    <label>@item.facultySalary</label>
                </td>
                <td style="text-align: right; vertical-align: top;">
                    <label>@item.facultyPayScale</label>
                </td>
                <td style="text-align: right; vertical-align: top;">
                    <label>@item.facultyPreviousExperience</label>
                </td>
                <td style="text-align: center; vertical-align: top;">
                    <label>@item.facultyMobile</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyEmail</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyPANNumber</label>
                </td>
                <td style="text-align: left; vertical-align: top;">
                    <label>@item.facultyAadhaarNumber</label>
                </td>

                @foreach (var education in @item.FacultyEducation)
                {
                    <td style="text-align: left; vertical-align: top">
                        <label>@education.studiedEducation</label>
                    </td>
                    
                }
            </tr>
        }

    </table>
}