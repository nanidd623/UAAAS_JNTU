@model List<UAAAS.Models.KnowyourRegistrationNumbers>
@{
    int Count = 1;
}

@using (Html.BeginForm())
{
    <table class="webGrid">
        <tr class="gridHeader">
            <th>S.No</th>
            <th>Registration Number</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
        </tr>
        @if (Model.Count != 0)
        {
            foreach (var data in Model)
             {
                 <tr style="background: #FCF1D1">
                     <td>@(Count++)</td>
                     <td>
                         @data.RegistrationNumber
                     </td>
                     <td>
                         @data.FirstName
                     </td>
                     <td>
                         @data.MiddleName
                     </td>
                     <td>
                         @data.Lastname
                     </td>
                 </tr>
             }
        }
        else
        {
            <tr style="background: #FCF1D1">
                <td colspan="5">
                   Faculty Does not contain Any Registration Numbers on this PAN Card Number.
                </td>
            </tr>
        }
    </table>
}