@model IEnumerable<UAAAS.Models.OtherCollege>
@{
    ViewBag.Title = "Other Colleges and Courses";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    }
    int num = 1;
    int cNum = 1;
}

<h2>Other Colleges and Courses</h2>
<br />
<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit College',
            autoOpen: false,
            resizable: false,
            height: 350,
            width: 600,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                //$(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add College'
            });
            url = $("#openDialog").attr('href');

            $myDialog.dialog('open');
            return false;
        });

        $('.full_table').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit College'
            });
            //url = $(".editDialog").attr('href');
            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete College',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View College',
                autoOpen: false,
                resizable: false,
                height: 350,
                width: 600,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);

                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");

                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
@if (ViewBag.OtherCollegeNotUpload == true)
{
    <b>Other Colleges in the same premises</b><br />
    <span class="notUpload error">You have no other colleges in the same premises.
        <br />
        Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["CollegesSuccess"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["CollegesSuccess"].ToString()</p>
    </div>
    }
    <table style="width: 100%">
        <tr>
            <td>
                <b>Other Colleges in the same premises</b>
            </td>
            <td class="create_link_right">
                @if (ViewBag.IsEditable != false)
                {
                    @Html.ActionLink("Add Other College", "AddEditRecord", "OtherColleges", new { collegeId = ViewBag.collegeId }, new { @id = "openDialog", @class = "create_button" })
                }
            </td>
        </tr>
    </table>

    <table class="full_table" style="width: 100%;">
        <tr>
            <th style="text-align: center;">S.No
            </th>
            <th>College Name
            </th>
            <th>Year of Establishment (YYYY)
            </th>
            <th style="text-align: center;">Affiliated University
            </th>
            <th colspan="3" style="text-align: center;"></th>
        </tr>

        @foreach (var item in ViewBag.Colleges as List<UAAAS.Models.OtherCollege>)
        {
            <tr>
                <td style="width: 50px; text-align: center;">
                    @(num++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.collegeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.yearOfEstablishment)
                </td>
                <td style="width: 200px; text-align: center;">
                    @if (!string.IsNullOrWhiteSpace(item.otherUniversityName))
                    {
                        @Html.DisplayFor(modelItem => item.otherUniversityName)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.universityName)
                    }
                </td>
                <td style="width: 30px; text-align: center;">
                    @Html.ActionLink("Edit", "AddEditRecord", new { id = item.id }, new { @class = "editDialog edit_button" })
                </td>
                <td style="width: 30px; text-align: center;">
                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "viewDialog view_button" })
                </td>
                <td style="width: 30px; text-align: center;">
                    @Html.ActionLink("Delete", "DeleteRecord", new { id = item.id }, new { @class = "confirmDialog delete_button" })
                </td>
            </tr>
        }

    </table>
        if (ViewBag.CollegeCount == 0)
        {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No records found</p>
    </div>
        }
    <div id="dialog-confirm" style="display: none">
        <p>
            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
            Are you sure to delete ?
        </p>
    </div>
    <div id="dialog-edit" style="display: none">
    </div>
    <div id="dialog-view" style="display: none">
    </div>
}

