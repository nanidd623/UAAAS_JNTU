@model List<UAAAS.Models.College_DD_Payment_Report>
@{
    int Count = 1;
}
<table border="1" style="width: 100%">
    <thead>
        <tr>
            <td colspan="5" style="text-align: center; background-color: yellow; vertical-align: top">A.Y - @ViewBag.Year</td>
        </tr>
        <tr>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                S.No
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                College Code
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                College Name
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Nature of Payments
            </th>
            <th style="text-align: center; background-color: yellow; vertical-align: top">
                Amount
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.OrderBy(a => a.CollegeName).ToList())
            {
                <tr>
                    <td style="text-align: center;">@(Count++)</td>
                    <td style="text-align: center;">@item.CollegeCode</td>
                    <td>@item.CollegeName</td>
                    <td>
                        @if(item.FeeTypeId == 9 && item.SubFeeTypeId == 2)
                        {
                            <span>SCM For Faculty</span>
                        }
                        else if (item.FeeTypeId == 9 && item.SubFeeTypeId == 3)
                        {
                            <span>SCM For Principal</span>
                        }
                        else
                        {
                            @item.SubFeeType
                        }
                    </td>
                    <td>@item.Amount</td>
                </tr>
            }
        }
    </tbody>
</table>
