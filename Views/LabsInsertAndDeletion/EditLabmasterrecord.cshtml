@model UAAAS.Controllers.EditLabsList
@{
    ViewBag.Title = "Edit LabMaster";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

<style>
    .editor-label{
        width:220px;
    }
    .editor-field{
        width:470px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
    });

</script>

@using (Html.BeginForm("EditLabmasterrecords", "LabsInsertAndDeletion"))
{
    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.CollegeTypeId)
        @Html.HiddenFor(model => model.CollegeId)
        <div class="editor-label">
            <b>Degree</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DegreeId, new SelectList(ViewBag.degree as System.Collections.IEnumerable, "id", "degree"), "---Select---", new {@style="wdith:200px;"  })
            @Html.ValidationMessageFor(model=>model.DegreeId)
        </div>

        <div class="editor-label">
            <b>Department</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.departments as System.Collections.IEnumerable, "id", "department"), "---Select---", new { @style = "wdith:200px;" })
            @Html.ValidationMessageFor(model => model.DepartmentId)
        </div>

        <div class="editor-label">
            <b>Specialization</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SpecializationId, new SelectList(ViewBag.specializations as System.Collections.IEnumerable, "id", "specialization"), "---Select---", new { @style = "wdith:200px;" })
            @Html.ValidationMessageFor(model => model.SpecializationId)
        </div>
        <div class="editor-label">
            <b>Year</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Year, new SelectList(ViewBag.YearList as System.Collections.IEnumerable, "Value", "Text"), new { @id = "Year", @style = "width:150px;" , @class = "required"})
            @Html.ValidationMessageFor(model => model.Year)
        </div>
        <div class="editor-label">
            <b>Semister</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Semister, new SelectList(ViewBag.SemesterList as System.Collections.IEnumerable, "Value", "Text"), new { @id = "Semister", @style = "width:150px;" })
        </div>
        <div class="editor-label">
            <b> @Html.Label("LabCode")</b>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Labcode, new { @class = "required" })
        </div>
        <div class="editor-label">
            <b> @Html.Label("LabName")</b>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.LabName, new { @style="width:465px;", @class = "required" })
            @Html.ValidationMessageFor(model => model.LabName)
        </div>
        <div class="editor-label">
            <b> @Html.Label("EquipmentName")</b>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.EquipmentName, new { @style = "width:465px;" })
            @Html.HiddenFor(m => m.EquipmentName)
        </div>
        <div class="editor-label" style="height: 35px;">
            <b> @Html.Label("Number of Additional Labs Available with same name")</b><span>*</span>
        </div>
        <div class="editor-field" style="height: 35px;">
            @Html.TextBoxFor(m => m.noofUnits, new { @maxlength = "5" })
        </div>
        <br/>
       
    </fieldset>
    <div style="text-align: center">
        <p>
            <input type="submit" value="Update" />
        </p>
    </div>
}
