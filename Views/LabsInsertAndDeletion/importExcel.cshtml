<script type="text/javascript">
    $(document).ready(function () {

        $("#CollegeTypeId").change(function () {
            debugger;
            var selectedValue = $(this).val();

            if (selectedValue != null && selectedValue != "") {
                $.ajax({
                    type: "GET",
                    contentType: "application/json",
                    url: "/LabsInsertAndDeletion/GetColleges?TypeId=" + selectedValue,
                    dataType: "Json",
                    success: function (data) {
                        $("#CollegeId").find('option').remove();
                        var item = "<option value=''>---Select---</option>";

                        $.each(data.Data, function (i, state) {
                            item += "<option value='" + state.collegeId + "'>" + state.collegeName + "</option>";
                        });
                        $("#CollegeId").html(item);
                    },
                    error: function ajaxError(response) {
                        alert(response.status + ' ' + response.statusText);
                    }
                });

                if (selectedValue == "1")
                    $("#CollegeId").addClass('required');
                else {
                    $("#CollegeId").removeClass('required');
                }
            }
        });

        $('.file').change(function () {
            debugger;
            var b = $('.file').val();
            var file = getNameFromPath($(this).val());
            var flag;
            if (file != null) {
                var extension = file.substr((file.lastIndexOf('.') + 1));
                switch (extension) {
                    case 'xlsx':
                        flag = true;
                        break;
                    case 'xls':
                        flag = true;
                        break;
                    default:
                        flag = false;
                }
            }
            else {
                alert('Please select xlsx or xls file');
                return false;
            }

            if (flag == false) {
                alert("File should be in xlsx or xls format only");
                $(this).val('');
                return false;
            }
            else {
                var size = GetFileSize1(file);
                size = size / 1048576;
                if (size > 2) {
                    alert("File should not exceed 2 MB in Size");
                    $(this).val('');
                }
                else {
                    $(".files > span").text("");
                }

            }
        });

        function GetFileSize1(fileid) {
            try {
                var fileSize = 0;
                //for IE
                if ($.browser.msie) {
                    //before making an object of ActiveXObject,
                    //please make sure ActiveX is enabled in your IE browser
                    var objFSO = new ActiveXObject("Scripting.FileSystemObject");
                    var filePath = $("#" + fileid)[0].value;
                    var objFile = objFSO.getFile(filePath);
                    var fileSize = objFile.size; //size in kb
                    //fileSize = fileSize / 1048576; //size in mb
                }
                    //for FF, Safari, Opeara and Others
                else {
                    fileSize = $("#FileUpload")[0].files[0].size //size in kb
                    //fileSize = fileSize / 1048576; //size in mb
                }

                return fileSize;
            }
            catch (e) {
            }
        }

        //get file path from client system
        function getNameFromPath(strFilepath) {
            var objRE = new RegExp(/([^\/\\]+)$/);
            var strName = objRE.exec(strFilepath);
            if (strName == null) {
                return null;
            }
            else {
                return strName[0];
            }
        }

        $('#btnSubmit').bind("click", function () {
            debugger;
            var type = $('#CollegeTypeId').val();
            var imgVal = $('#FileUpload').val();
            if (type == '') {
                //$("#CollegeTypeId").css("background-color", "red");
                //$('#CollegeTypeId').addClass("required");
                //$('#FileUpload').addClass("required");
                alert("Please Select College Type");
                result = false;
            }
            else if(imgVal == '')
            {
                alert("Upload File Can't be Empty");
                result = false;
            }
            else {
                result = true;
            }
            return result;

        });
      
    });
</script>
