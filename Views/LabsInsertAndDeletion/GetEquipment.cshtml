@model List<Excelupload.Models.LabsList>

@{
    ViewBag.Title = "GetEquipment";
    int sno = 1;
}

<h2>GetEquipment</h2>

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>




<script type="text/javascript">

    $(document).ready(function () {
        $.noConflict();
        $('#example').DataTable();
    });
</script>



@using (Html.BeginForm("DeleteBySem", "Account"))
{
    
    <table id="example" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
            <tr>

                <th>
                    S No
                </th>
                <th>
                    year
                </th>
                <th>
                    Semester
                </th>
                <th>
                    Labcode
                </th>
                <th>
                    LabName
                </th>
                <th>
                    EquipmentName
                </th>

                <th>
                    checked
                </th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {

                <tr>
                    <td>
                        @(sno++)
                        @Html.HiddenFor(m => m[i].Id)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(m => m[i].Year)
                        @Html.HiddenFor(m => m[i].Year)

                    </td>
                    <td>
                        @Html.HiddenFor(m => m[i].Semester)
                        @Html.DisplayFor(m => m[i].Semester)
                    </td>
                    <td>
                        @Html.HiddenFor(m => m[i].Labcode)
                        @Html.DisplayFor(m => m[i].Labcode)
                    </td>
                    <td>
                        @Html.HiddenFor(m => m[i].LabName)
                        @Html.DisplayFor(m => m[i].LabName)
                    </td>
                    <td>
                        @Html.HiddenFor(m => m[i].EquipmentName)
                        @Html.DisplayFor(m => m[i].EquipmentName)
                    </td>
                    <td>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m[i].IsChecked, new { id = "IsChecked", @class = "forcheckbox" })
                            @Html.HiddenFor(m => m[i].Id, new { Value = Model[i].Id })

                        </div>
                    </td>
                </tr>



            }
        </tbody>
        <tfoot>

        </tfoot>


    </table>

    <input type="submit" value="submit" />
}


