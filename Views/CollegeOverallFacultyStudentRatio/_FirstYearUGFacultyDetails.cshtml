@model UAAAS.Models.CollegeOverallFacultyStudentRatio
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style type="text/css">
    .width
    {
        width: 80%;
    }

    .text_width
    {
        width: 38%;
        text-align: center;
    }
</style>

@using (@Html.BeginForm())
{   
    <div class="details_table">
        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Degree)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.ValidationMessageFor(model => model.degreeID)
            @Html.DisplayFor(model => model.Degree)
            @Html.HiddenFor(model => model.degreeID)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Department)
            @Html.HiddenFor(model => model.DepartmentID)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Specialization)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Specialization)
            @Html.HiddenFor(model => model.specializationId)

        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Shift)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Shift)
            @Html.HiddenFor(model => model.shiftId)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.Label("First Year UG(Engg) Total Strength")<br /><span style="color:red">(Only Humanities)</span>
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.approvedIntake1, new { @class = "text_width" })
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.Label("First Year UG(Engg) Total Faculty")<br /><span style="color:red">(Only Humanities)</span>
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.totalFaculty, new { @class = "text_width" })
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.Label("First Year UG(Engg) Total Ratified Faculty")<br /><span style="color:red">(Only Humanities)</span>
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.ratifiedFaculty, new { @class = "text_width" })
        </div>
    </div>   
}

