@model UAAAS.Models.CollegeOverallFacultyStudentRatio
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style type="text/css">
    .width {
        width: 80%;
    }

    .text_width {
        width: 38%;
        text-align: center;
    }
</style>

@using (@Html.BeginForm())
{
   
    
    <div class="details_table">
        @if (@ViewBag.duration != null)
        {
            @Html.Hidden("Duration", (int)(@ViewBag.duration))            
            <script type="text/javascript">
                var d = $("#Duration").val();
                for (var i = 6; i > d; i--) {
                    $('#divlbl' + (i) + '').hide();
                    $('#divtxt' + (i) + '').hide();
                }
            </script>
        }
        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Degree)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.ValidationMessageFor(model => model.degreeID)
            @Html.DisplayFor(model => model.Degree)
            @Html.HiddenFor(model => model.degreeID)


        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field" style="width: 360px">


            @Html.DisplayFor(model => model.Department)
            @Html.HiddenFor(model => model.DepartmentID)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Specialization)
        </div>
        <div class="editor-field" style="width: 360px">


            @Html.DisplayFor(model => model.Specialization)
            @Html.HiddenFor(model => model.specializationId)

        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.Shift)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Shift)
            @Html.HiddenFor(model => model.shiftId)
        </div>

          <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.totalFaculty) 
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.totalFaculty ,new { @class = "text_width"})          
        </div>

         <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.ratifiedFaculty) 
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.ratifiedFaculty ,new { @class = "text_width"})         
        </div>
    </div>
    <br />
    
    <div>
        <div class="editor-label" style="width: 280px; background-color: transparent; padding: 0; margin: 0;">
        </div>
            
        <div class="editor-field" style="width: 360px; background-color: transparent; padding: 0; margin: 0;" >
            <div style="float: left; width: 55%; text-align: center;"><b>Sanctioned Strength</b></div>
            
        </div>
         <div class="editor-label" style="width: 280px" id="divlbl1">
            @Html.LabelFor(model => model.approvedIntake1) @ViewBag.FirstYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt1">
            @Html.TextBoxFor(model => model.approvedIntake1, new { @class = "text_width", @id = "api1" })
        </div>

        <div class="editor-label" style="width: 280px" id="divlbl2">
            @Html.LabelFor(model => model.approvedIntake2) @ViewBag.SecondYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt2">
            @Html.TextBoxFor(model => model.approvedIntake2, new { @class = "text_width", @id = "api2" })
        </div>

        <div class="editor-label" style="width: 280px" id="divlbl3">
            @Html.LabelFor(model => model.approvedIntake3) @ViewBag.ThirdYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt3">
            @Html.TextBoxFor(model => model.approvedIntake3, new { @class = "text_width", @id = "api3" })
        </div>

        <div class="editor-label" style="width: 280px" id="divlbl4">
            @Html.LabelFor(model => model.approvedIntake4) @ViewBag.FourthYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt4">
            @Html.TextBoxFor(model => model.approvedIntake4, new { @class = "text_width", @id = "api4" })
        </div>

        <div class="editor-label" style="width: 280px" id="divlbl5">
            @Html.LabelFor(model => model.approvedIntake5) @ViewBag.FifthYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt5">
            @Html.TextBoxFor(model => model.approvedIntake5, new { @class = "text_width", @id = "api5" })
        </div>

        <div class="editor-label" style="width: 280px" id="divlbl6">
            @Html.LabelFor(model => model.approvedIntake6) @ViewBag.SixthYear
        </div>
        <div class="editor-field" style="width: 360px" id="divtxt6">
            @Html.TextBoxFor(model => model.approvedIntake6, new { @class = "text_width", @id = "api6" })
        </div>
      

      
    </div>
}

