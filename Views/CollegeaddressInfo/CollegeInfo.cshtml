@model UAAAS.Models.CollegeInformation
@using UAAAS.Models

@{
    ViewBag.Title = "CollegeInfo";
}

<h2>CollegeInfo</h2>
@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div id="div_print">


        <table class="four_columns">
            <tr>
                <td class="col11" colspan="4">
                    <b>College Info</b>
                </td>
            </tr>

            <tr>
                
                <td class="col11">
                    @Html.LabelFor(model => model.address)
                </td>
                <td class="col21" colspan="3">
                    @Html.TextAreaFor(model => model.address)
                </td>
            </tr>
            <tr>
                <td class="col11">
                    @Html.LabelFor(model => model.townOrCity)
                </td>
                <td class="col21">
                    @Html.TextBoxFor(model => model.townOrCity)
                </td>
                <td class="col31">
                    @Html.LabelFor(model => model.mandal)
                </td>
                <td class="col41">
                    @Html.TextBoxFor(model => model.mandal)
                </td>
            </tr>
            <tr>
                <td class="col11">
                    @Html.LabelFor(model => model.stateName)
                </td>
                <td class="col21">
                    @Html.DropDownListFor(model => model.stateId,
        new SelectList(ViewBag.State as System.Collections.IEnumerable, "id", "stateName"),
        "-- Select --", new { id = "state" })
                    @ViewBag.StateName

                    @Html.HiddenFor(model => model.stateId)

                    @Html.HiddenFor(m=>m.id)
                </td>
                <td class="col31">
                    @Html.LabelFor(model => model.districtId)
                </td>
                <td class="col41">
                    @Html.DropDownListFor(model => model.districtId,
                             new SelectList(ViewBag.District as System.Collections.IEnumerable, "id", "districtName"),
                    "-- Select --", new { id = "district" })
                    @ViewBag.DistrictName
                    @Html.HiddenFor(model => model.districtId)
                </td>
            </tr>

            <tr>
                <td class="col11">
                    @Html.LabelFor(model => model.pincode)
                </td>
                <td class="col21">
                    @Html.TextBoxFor(model => model.pincode)
                </td>
                <td class="col31">
                    @Html.LabelFor(model => model.landline)
                </td>
                <td class="col41">
                    @Html.TextBoxFor(model => model.landline)
                </td>
            </tr>
            <tr>
                <td colspan="3" style="line-height: 1.2rem;" class="right_buttons">
                    <input type="submit" value="Save" />
                </td>
            </tr>
        </table>
        
    </div>
}
