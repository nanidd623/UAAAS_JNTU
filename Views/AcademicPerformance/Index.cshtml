            <td style="width: 30px; text-align: center;">@item.passedStudents1</td>
            <td style="width: 30px; text-align: center;">@item.passPercentage1</td>

            <td style="width: 20px; text-align: center;">
                @Html.ActionLink("Edit", "AddEditRecord", new { sid = item.specializationId, shiftid=item.shiftId }, new { @class = "editDialog edit_button" })
            </td>
