@model UAAAS.Models.CollegeAcademicPerformance
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style type="text/css">
    .width {
        width: 80%;
    }

    .text_width {
        width: 28%;
        text-align: center;
    }
</style>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }    
    
    <div class="details_table">
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.degreeID)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Degree)
            @Html.HiddenFor(model => model.degreeID)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.DepartmentID)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Department)
            @Html.HiddenFor(model => model.DepartmentID)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.specializationId)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Specialization)
            @Html.HiddenFor(model => model.specializationId)
        </div>

        <div class="editor-label" style="width: 280px">
            @Html.LabelFor(model => model.shiftId)
        </div>
        <div class="editor-field" style="width: 360px">
            @Html.DisplayFor(model => model.Shift)
            @Html.HiddenFor(model => model.shiftId)
        </div>
    </div>
    <br />
    <div>
        <div class="editor-label" style="width: 280px; background-color: transparent; padding: 0; margin: 0;">
        </div>
        <div class="editor-field" style="width: 360px; background-color: transparent; padding: 0; margin: 0;">
            <div style="float: left; width: 33%; text-align: center;"><b>Appeared</b></div>
            <div style="float: left; width: 33%; text-align: center;"><b>Passed</b></div>
            <div style="float: left; width: 33%; text-align: center;"><b>%</b></div>
        </div>

        <div class="editor-label" style="width: 280px">
            @ViewBag.FirstYear
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.appearedStudents1, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passedStudents1, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passPercentage1, new { @class = "text_width" })
        </div>

        <div class="editor-label" style="width: 280px">
            @ViewBag.SecondYear
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.appearedStudents2, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passedStudents2, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passPercentage2, new { @class = "text_width" })
        </div>

        <div class="editor-label" style="width: 280px">
            @ViewBag.ThirdYear
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.appearedStudents3, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passedStudents3, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passPercentage3, new { @class = "text_width" })
        </div>

        <div class="editor-label" style="width: 280px">
            @ViewBag.FourthYear
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.appearedStudents4, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passedStudents4, new { @class = "text_width" })
        </div>
        <div class="editor-field" style="width: 112px">
            @Html.DisplayFor(model => model.passPercentage4, new { @class = "text_width" })
        </div>
    </div>
}


