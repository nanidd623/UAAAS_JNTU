@model UAAAS.Models.Permanent_Affiliation.NBAAccreditationModel

@{
    Layout = "~/Views/Shared/_PALayoutLeftMenu.cshtml";
    ViewBag.Title = "NBA Accreditation List";
}
<h2>NBA Accreditation History</h2>

@if (ViewBag.IsEditable == true)
{
    <p class="create_link_right">
        @Html.ActionLink("Add NBA Accreditation", "Edit", "PA_NBAAccreditation", new { @class = "create_button" })
    </p>
}
@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

@if (ViewBag.NBAList.Count > 0)
{
    <div style="margin-top:15px;">
        <table class="webGrid">
            <thead>
                <tr class="col1">
                    <th>S.No</th>
                    <th>Academic Year</th>
                    <th>Degree</th>
                    <th>Department</th>
                    <th>Specialization</th>
                    <th>NBA From Date</th>
                    <th>NBA To Date</th>
                    <th>NBA Approval Letter</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pay in ((List<UAAAS.Controllers.Permanent_Affiliation.NBA>)ViewBag.NBAList).Select((value, i) => new { i = i + 1, value }))
                {
                    <tr class="col2">
                        <td>@pay.i </td>
                        <td>@pay.value.AcademicYear</td>
                        <td>@pay.value.Degree</td>
                        <td>@pay.value.Department</td>
                        <td>@pay.value.Specialization</td>
                        <td>@pay.value.NbaFrom</td>
                        <td>@pay.value.NbaTo</td>
                        <td style="text-align: left; font-weight: normal;">
                            @if (pay.value.NbaApprovalLetterPath != null)
                            {
                                <a href="../Content/Upload/College/NBAAccredited_Latest/@pay.value.NbaApprovalLetterPath" target="_blank"><span style="color: red;font-weight: bold ">View</span></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No Data found</p>
    </div>
}