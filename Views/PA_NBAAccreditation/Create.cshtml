                @Html.DropDownListFor(model => model.SpecializationId, new SelectList(Enumerable.Empty<SelectListItem>(), "specializationId", "specialization"), "---Select---", new { @id = "specializationId", @class = "required", @style = "width:161px" })
                @Html.ValidationMessageFor(model => model.SpecializationId)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.NbaFrom)
            </td>
            <td class="col2">
                @Html.TextBoxFor(model => model.NbaFrom, new { @id = "fromDate", @name = "@fromDate", @class = "calendarnew", @placeholder = "DD/MM/YYYY" })
                @Html.ValidationMessageFor(model => model.NbaFrom)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.NbaTo)
            </td>
            <td class="col2">
                @Html.TextBoxFor(model => model.NbaTo, new { @id = "toDate", @name = "@toDate", @class = "calendarnew", @placeholder = "DD/MM/YYYY" })
                @Html.ValidationMessageFor(model => model.NbaTo)
            </td>
        </tr>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.NbaApprovalLetter)
            </td>
            <td class="col2">
                @if (Model.NbaApprovalLetterPath != null)
                {
                    @Html.TextBoxFor(model => model.NbaApprovalLetter, new { type = "file", @id = "@txtFile", @name = "@file", @class = "Supportingfile" })
                    <a href="~/Content/Upload/College/NBAAccredited_Latest/@Model.NbaApprovalLetterPath" target="_blank">
                        <span style="color: red;"><b>View</b></span>
                    </a>
                }
                else
                {
                    @Html.TextBoxFor(model => model.NbaApprovalLetter, new { type = "file", @id = "@txtFile", @name = "@file", @class = "required Supportingfile" })
                }
                @Html.ValidationMessageFor(model => model.NbaApprovalLetter)
            </td>
        </tr>
    </table>

    <div style="text-align: right">
        <p>
            <input type="submit" value="Add" id="btnAdd" name="cmd" class="btnclass" onclick="return Validate();" />
        </p>
    </div>
}
