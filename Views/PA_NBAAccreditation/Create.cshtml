@if (ViewBag.NBAList.Count > 0)
{
    <div style="margin-top:15px;">
        <h2>NBA Accreditation History</h2><br />
        <table class="webGrid">
            <thead>
                <tr class="col1">
                    <th>S.No</th>
                    <th>Academic Year</th>
                    <th>Degree</th>
                    <th>Department</th>
                    <th>Specialization</th>
                    <th>NBA From Date</th>
                    <th>NBA To Date</th>
                    <th>NBA Approval Letter</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pay in ((List<UAAAS.Controllers.Permanent_Affiliation.NBA>)ViewBag.NBAList).Select((value, i) => new { i = i + 1, value }))
                {
                    <tr class="col2">
                        <td>@pay.i </td>
                        <td>@pay.value.AcademicYear</td>
                        <td>@pay.value.Degree</td>
                        <td>@pay.value.Department</td>
                        <td>@pay.value.Specialization</td>
                        <td>@pay.value.NbaFrom</td>
                        <td>@pay.value.NbaTo</td>
                        <td style="text-align: left; font-weight: normal;">
                            @if (pay.value.NbaApprovalLetterPath != null)
                            {
                                <a href="../Content/Upload/College/NBAAccredited_Latest/@pay.value.NbaApprovalLetterPath" target="_blank"><span style="color: red;font-weight: bold ">View</span></a>
                            }
                        </td>
                        @if (ViewBag.IsEditable == true)
                        {
                            <td>
                                @Html.ActionLink("Delete", "Delete", "PA_NBAAccreditation", new
                    {
                        collegeId = UAAAS.Models.Utilities.EncryptString(pay.value.CollegeId.ToString(),
                                    System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]).ToString(),

                        sno = UAAAS.Models.Utilities.EncryptString(pay.value.Sno.ToString(),
                        System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]).ToString(),
                    }, new { @class = "confirmDialog delete_button" })
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert"></span>
        Are you sure to delete this NBA Accreditation ?
    </p>
</div>

<script type="text/javascript">
    function Validate() {
        var startDate = document.getElementById("fromDate").value;
        var endDate = document.getElementById("toDate").value;

        if ((Date.parse(endDate) <= Date.parse(startDate))) {
            alert("From date should be less than to date.");
            //document.getElementById("toDate").value = "";
            return false;
        }
        else {
            return true;
        }
    }
</script>