    @Html.HiddenFor(model => model.Sno, new { @Value = Model.Sno })
    @Html.HiddenFor(model => model.CollegeId, new { @Value = Model.CollegeId })

    <table>
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.AcademicYear)
            </td>
            <td class="col2" style="width: 357px;">
