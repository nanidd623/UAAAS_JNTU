@model IEnumerable<UAAAS.Models.CollegeEnclosures>
@{
    Layout = "~/Views/Shared/_UserLayoutLeftMenu.cshtml";
    ViewBag.Title = "College Photos";
}
<h2>College Enclosures</h2>
<br />
@using (Html.BeginForm())
{
    foreach (var item in ViewBag.CollegeEnclosures as List<UAAAS.Models.CollegeEnclosures>)
    {
        <table>
            <tr>
                <th>
                    <label style="font-size: 18px">@item.documentName</label>
                </th>
            </tr>
            <tr>
                <td>
                @if (item.path != null)
                {
                    <a href="@item.path.Replace("~", "")" target="_blank">Download</a>                   
                }
                else
                {
                    <span></span>
                }
                </td>
            </tr>
        </table>
        <br />
    <br />                
    }
    if (ViewBag.Count == 0)
    {
        <div class="warning" style="width: 200px; margin: 0 auto;">
            <p>No records found</p>
        </div>
    }
}

