@model IList<UAAAS.Models.college_staticdata_modifications>
@{
    ViewBag.Title = "Static data modifications";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    }
    int count = 0;
}

<h2>Static data modifications</h2>
<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit RTI Details',
            autoOpen: false,
            resizable: false,
            height: 350,
            width: 550,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).load(url);
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Static Data Modification Details'
            });
            url = $("#openDialog").attr('href');

            $myDialog.dialog('open');
            return false;
        });
        $('.webGrid').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {

            var url = $(this).attr('href');

            $("#dialog-edit").dialog({
                title: 'Edit Static Data Modification Details',
                autoOpen: false,
                resizable: false,
                height: 350,
                width: 550,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                closeOnEscape: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                close: function (event, ui) {
                    //$(this).load(url);
                    window.location.href = "/StaticdataModifications/Index";
                }

            });

            $("#dialog-edit").dialog('open');
            return false;
        });

        //$(".editDialog").live("click", function (e) {
        //    debugger;
        //    url = $(this).attr('href');
        //    e.preventDefault();
        //    $("#dialog-edit").dialog({
        //        title: 'Edit Static Data Modification Details'
        //    });
        //    $myDialog.dialog('open');
        //    return false;
        //});

        $(".confirmDialog").live("click", function (e) {

            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Static Data Modification Details',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Static Data Modification Details',
                autoOpen: false,
                resizable: false,
                height: 350,
                width: 550,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);

                },
                buttons: {
                    "Close": function () {
                        //$(this).dialog("close");
                        window.location.href = "/StaticdataModifications/Index";
                    }
                },
                close: function (event, ui) {
                    //$(this).dialog('close');
                    window.location.href = "/StaticdataModifications/Index";
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
@if (ViewBag.CommitteeNotUpload == true)
{
    <b>Static data modifications</b><br />
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }
    <table style="width: 100%">
        <tr>
            <td class="create_link_right">
                @Html.ActionLink("Add", "AddEditRecord", "StaticdataModifications", new {collegeId = @ViewBag.collegeId}, new {@id = "openDialog", @class = "create_button"})
            </td>
        </tr>
    </table>
    <br/>
     <table class="four_columns" style="width: 100%;">
            <tr style="font-weight: bold;">
                <td style="text-align: center; width: 50px;" class="col11">S.No</td>
                <td style="text-align: left; width: 250px;" class="col11">Form Name</td>
                <td style="text-align: left; width: 250px;" class="col11">Justification</td>
                <td style="text-align: left; width: 250px;" class="col11">File</td>
                <td style="text-align: left;" class="col11">Edit</td>
                <td style="text-align: left;" class="col11">Details</td>
                <td style="text-align: left;" class="col11">Delete</td>
            </tr>

            @foreach (var item in Model)
            {                
                <tr>
                    <td style="text-align: center;" class="col21">
                        @(count = count + 1)
                    </td>
                     <td style="text-align: left;" class="col21">
                       @item.FormName
                    </td>
                    <td style="text-align: left;" class="col21">
                        @item.justification
                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (!String.IsNullOrEmpty(@item.staticdatafilename))
                        {
                            <a href="~/Content/Upload/CollegeEnclosures/DataModifications/@item.staticdatafilename" target="_blank">
                                <span style="color: red;"><b>View</b></span>
                            </a>
                        }
                        else
                        {
                            <span>--</span>
                        }

                    </td>
                    <td style="width: 20px; text-align: center;" class="col21">
                        @Html.ActionLink("Edit", "AddEditRecord", "StaticdataModifications", new { id = item.id }, new { @class = "editDialog edit_button" })
                    </td>
                    <td style="width: 20px; text-align: center;" class="col21">
                        @Html.ActionLink("Details", "Details", "StaticdataModifications", new {id = item.id}, new {@class = "viewDialog view_button"})
                    </td>
                    <td style="width: 20px; text-align: center;" class="col21">
                        @Html.ActionLink("Delete", "DeleteRecord", "StaticdataModifications", new { id = item.id }, new { @class = "confirmDialog delete_button" })
                    </td>
                </tr>
            }
        </table>
