@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <span>From Date</span>
            </td>
            <td>
                @if(@ViewBag.Post!=true)
                {
                @Html.TextBox("txtFromDate", DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "calendar" })
                }
                else
                {
                 @Html.TextBox("txtFromDate", (string)ViewBag.dt1, new { @class = "calendar" })
                }
            </td>
            <td>
                <span>To Date</span>
            </td>
            <td>
                @if(@ViewBag.Post!=true)
                {
                @Html.TextBox("txtToDate",DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "calendar" })
                }
                else
                {
                     @Html.TextBox("txtToDate",(string)ViewBag.dt2, new { @class = "calendar" })
                }
            </td>          
            <td>

                @Html.DropDownList("ddlcollegeId",
                new SelectList(ViewBag.colleges as System.Collections.IEnumerable, "id", "name"),
                "All colleges", new { id = "ddlcollegeId" })
            </td>  
              <td  style="text-align:right">
                <input type="submit" id="btnsubmit" value="Search" id="btnsubmit" />
            </td>         
        </tr>        
    </table>
   <br />
    <table id="example" class="display">
        <thead>
            <tr>
                <th style="width: 50px; text-align: center;">S.No</th>
                <th style="text-align: left;">Error Date</th>
                <th style="text-align: left;">Exception</th>
                <th style="text-align: left;">Controller</th>
                <th style="text-align: left;">Action</th>
                <th class="ui-state-default" style="width: 50px; text-align: center;">Detail</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {                
                <tr>
                    <td style="text-align: center;">
                        @(sno++)
                    </td>
                     <td style="text-align: left;">                        
                         @Utilities.MMDDYY2DDMMYY(@item.createdOn.ToString())                 
                    </td>
                    <td style="text-align: left;">
                        @item.exception
                    </td>
                    <td style="text-align: left;">
                        @item.controller
                    </td>
                    <td>
                        @item.action
                    </td>
                    <td style="text-align: center;">
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "view_button" })
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th style="">
                    <input type="text" id="i-0" style="width: 50%; text-align: left; display: none;" class="search_init">
