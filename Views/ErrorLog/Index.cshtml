                    <input type="text" id="i-5" style="width: 85%; text-align: left;" class="search_init">
                </th>
                 <th style="">
                    <input type="text" id="i-6" style="width:50%; text-align: left; display: none" class="search_init">
                </th>
            </tr>
        </tfoot>
    </table>
}