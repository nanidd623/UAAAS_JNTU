@model List<UAAAS.Controllers.BASFlagDeficiencyFacultyController.CollegeWiseBasFlagFaculty>
@{
    ViewBag.Title = "CollegeWiseBASFlagCleared";
    int sno = 1;
    int TotalCount = 0;
    int ClearedCount = 0;
    int RemainingCount = 0;
    if (Model != null)
    {
        TotalCount = Model.Count();
        ClearedCount = Model.Where(s => s.Cleared == "Cleared").Count();
        RemainingCount = Model.Where(s => s.Cleared != "Cleared").Count();
    }

}

