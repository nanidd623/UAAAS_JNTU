@model UAAAS.Models.Laboratories
@{
    ViewBag.Title = "Laboratories";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
}

<h2>Laboratories</h2>

<script type="text/javascript">
    $(document).ready(function () {

        var mainUrl = window.location;
        var url;

        $.ajaxSetup({ cache: false });

        var $myDialog = $("#dialog-edit").dialog({
            title: 'Add/Edit Laboratories',
            autoOpen: false,
            resizable: false,
            height: 420,
            width: 650,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            closeOnEscape: true,
            open: function (event, ui) {
                $(this).load(url);
            },
            close: function (event, ui) {
                $(this).dialog("close");
            }
        });

        $("#openDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Add Laboratories'
            });
            url = $("#openDialog").attr('href');

            $myDialog.dialog('open');
            return false;
        });

        //$('.full_table').find('tr').click(function () {
        $('.webGrid').find('tr').click(function () {
            url = $(this).find(".editDialog").attr('href');
        });

        $(".editDialog").live("click", function (e) {
            e.preventDefault();
            $("#dialog-edit").dialog({
                title: 'Edit Laboratories'
            });
            $myDialog.dialog('open');
            return false;
        });

        $(".confirmDialog").live("click", function (e) {

            var url = $(this).attr('href');
            $("#dialog-confirm").dialog({
                title: 'Delete Laboratories',
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                buttons: {
                    "Yes": function () {
                        $(this).dialog("close");
                        window.location = url;

                    },
                    "No": function () {
                        $(this).dialog("close");

                    }
                }
            });
            $("#dialog-confirm").dialog('open');
            return false;
        });

        $(".viewDialog").live("click", function (e) {
            var url = $(this).attr('href');
            $("#dialog-view").dialog({
                title: 'View Laboratories',
                autoOpen: false,
                resizable: false,
                height: 450,
                width: 620,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);

                },
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");

                    }
                },
                close: function (event, ui) {
                    $(this).dialog('close');
                }
            });

            $("#dialog-view").dialog('open');
            return false;
        });

        $("#btncancel").live("click", function (e) {
            $("#dialog-edit").dialog("close");
        });

        $($myDialog).bind("dialogclose", function () {
            window.location = mainUrl;
        });
    });
</script>
@if (ViewBag.NotUpload == true)
{
    <b>Laboratories</b><br />
    <span class="notUpload">You can not upload data Please contact Affiliations & Academic Audit if you want to upload</span>
}
else
{
    if (TempData["Error"] != null)
    {
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
    }
    if (TempData["Success"] != null)
    {
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
    }
    <table style="width: 100%">
        <tr>
            <td></td>
            <td class="create_link_right">
                @Html.ActionLink("Add Laboratories", "AddEditRecord", "Laboratories", new { collegeId = @ViewBag.collegeId }, new { @id = "openDialog", @class = "create_button" })
            </td>
        </tr>
    </table>

    <div id="LaboratoriesgridContent">

        @{            
    var Committeegrid = new WebGrid(ViewBag.Laboratories,
        canPage: false,
        //rowsPerPage: 10,
        selectionFieldName: "selectedRow",
        ajaxUpdateContainerId: "gridContent"
        );
    // Committeegrid.Pager(WebGridPagerModes.NextPrevious);
    var CommitteeCount = 1; 
        }
        @Committeegrid.GetHtml(tableStyle: "webGrid",
                headerStyle: "gridHeader",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: Committeegrid.Columns(
                Committeegrid.Column("ID", "S.No.", format: p => CommitteeCount++, style: "row_number", canSort: true),
                Committeegrid.Column("degree", "Degree in the committee", null, style: "align_left", canSort: true),
                Committeegrid.Column("department", "Department", null, style: "align_left", canSort: true),
                Committeegrid.Column("specializationName", "Specialization", null, style: "align_left", canSort: true),
                Committeegrid.Column("shiftName", "Shift", null, style: "align_left", canSort: true),
                Committeegrid.Column("year", "year", null, style: "align_left", canSort: true),
                Committeegrid.Column("labName", "Name of the Laboratory", null, style: "align_left", canSort: true),
                Committeegrid.Column("IsShared", "Is lab Space / Equipment Shared", format: (item) =>
                {
                    if (item.IsShared == true)
                    {
                        return "Yes";
                    }
                    else
                    {
                        return "No";
                    }
                }, style: "align_left", canSort: true),
                Committeegrid.Column("totalExperiments", "No. of Experiments", null, style: "align_left", canSort: true),
                Committeegrid.Column("labFloorArea", "Floor Area(in Sqm)", null, style: "align_left", canSort: true),
                Committeegrid.Column("Edit", "Edit", format: @<text>@Html.ActionLink("Edit", "AddEditRecord", new { id = item.id }, new { @class = "editDialog edit_button" }) </text>, style: "edit", canSort: true),
                Committeegrid.Column("Details", "Details", format: @<text>@Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "viewDialog view_button" }) </text>, style: "view", canSort: true),
                Committeegrid.Column("Delete", "Delete", format: @<text>@Html.ActionLink("Delete", "DeleteRecord", new { id = item.id }, new { @class = "confirmDialog delete_button" }) </text>, style: "view", canSort: true)
         ))
    </div>

    if (ViewBag.Count == 0)
    {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No records found</p>
    </div>
    }

    <div id="dialog-confirm" style="display: none">
        <p>
            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
            Are you sure to delete ?
        </p>
    </div>
    <div id="dialog-edit" style="display: none">
    </div>
    <div id="dialog-view" style="display: none">
    </div>
}