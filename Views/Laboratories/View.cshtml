                            <label></label>
                        }
                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (item.shiftName != null)
                        {
                            <label>@item.shiftName</label>
                        }
                        else
                        {
                            <label></label>
                        }
                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (item.year != null)
                        {
                            <label>@item.year</label>
                        }
                        else
                        {
                            <label></label>
                        }
                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (item.labName != null)
                        {
                            <label>@item.labName</label>
                        }
                        else
                        {
                            <label></label>
                        }
                    </td>
                     <td style="text-align: left;" class="col21">
                        @if (item.IsShared != null)
                        {
                            <label>@item.IsShared</label>
                        }
                        else
                        {
                            <label></label>
                        }
                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (item.totalExperiments != null)
                        {
                            <label>@item.totalExperiments</label>
                        }
                        else
                        {
                            <label></label>
