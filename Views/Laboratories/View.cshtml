                    </td>
                    <td style="text-align: left;" class="col21">
                        @if (item.labFloorArea != null)
                        {
                            <label>@item.labFloorArea</label>
                        }
                        else
                        {
                            <label></label>
                        }
                    </td>
                    <td style="width: 20px; text-align: center;" class="col21 view_hide">
                        @Html.ActionLink("Details", "Details", "Laboratories", new { id = item.id }, new { @class = "viewDialog view_button" })
                    </td>
                </tr>
            }
        </table>
            if (ViewBag.Count == 0)
            {
        <div class="warning" style="width: 200px; margin: 0 auto;">
            <p>No records found</p>
        </div>
            }
        <div id="dialog-view" style="display: none">
        </div>
    }
</div>

