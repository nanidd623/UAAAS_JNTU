            @Html.ValidationMessageFor(model => model.PrincipalAadhaarNumber)
        </div>
        <div class="editor-label" style="width: 250px;">
            <span>Aadhaar Document</span>
        </div>
        <div class="editor-field" style="width: 380px;">
            @Html.TextBoxFor(model => model.PrincipalAadharPhotoDocument, new { type = "file", @class = "aadhaarfile1 PrincipalDetails required" })
