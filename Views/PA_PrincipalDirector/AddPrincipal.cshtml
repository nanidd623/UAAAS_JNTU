                    <span>Appointment Order & Joining Letter</span>
                </div>
                <div class="editor-field" style="width: 380px;">
                    @Html.TextBoxFor(model => model.PrincipalAppointmentDocument, new { type = "file", @class = "Supportingfile required" })
                </div>
                <div class="editor-label" style="width: 250px;">
                    <span>PayScale (RS.)</span>
                </div>
                <div class="editor-field" style="width: 380px;">
                    @Html.TextBoxFor(model => model.PrincipalSalary, new { @class = "required", @maxlength = "20", @placeholder = "Enter Pay Scale" })
                </div>
            </div>
