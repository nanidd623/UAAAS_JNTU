@using (Html.BeginForm())
{
    if (TempData["Error"] != null)
    {
        <div class="error">
            <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
        </div>
    }
    if (TempData["Success"] != null)
    {
        <div class="success">
            <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
        </div>
    }


    <table id="example" class="display">
        <thead>
            <tr>
                <th style="width: 50px; text-align: center;">S.No</th>
                <th style="width: 140px; text-align: center;">Registration ID</th>
                <th style="text-align: left; width: 315px">Full Name</th>
                <th style="width: 120px; text-align: center;">Department</th>
                <th style="width: 120px; text-align: center;">PAN Number</th>
                <th style="width: 120px; text-align: center;">Age(Years)</th>
                <th style="width: 120px; text-align: center;" >PHD</th>
                <th style="width: 120px; text-align: center;">Photo</th>
                <th style="width: 120px; text-align: center;">Approve</th>
                <th style="width: 120px; text-align: center;">Not Approve</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string color = string.Empty;
                int Phd = 0;
                int years=0;
                int months=0;
                string DeptName = string.Empty;
                if (item.DeptId != 0)
                {
                    DeptName = DeptData.Where(e => e.DeptId == item.DeptId).Select(e => e.DeptName).FirstOrDefault();
                }
               
                
                
                string from = UAAAS.Models.Utilities.MMDDYY2DDMMYY(item.DateOfBirth.ToString());
                string to = UAAAS.Models.Utilities.MMDDYY2DDMMYY(DateTime.Now.ToString());
                DateTime fromdate = UAAAS.Models.Utilities.DDMMYY2MMDDYY(from);
                DateTime todate = UAAAS.Models.Utilities.DDMMYY2MMDDYY(to);
                int Years = new DateTime(todate.Subtract(fromdate).Ticks).Year - 1;
                DateTime PastYearDate = fromdate.AddYears(Years);
                int Months = 0;
                for (int i = 1; i <= 12; i++)
                {
                    if (PastYearDate.AddMonths(i) == todate)
                    {
                        Months = i;
                        break;
                    }
                    else if (PastYearDate.AddMonths(i) >= todate)
                    {
                        Months = i - 1;
                        break;
                    }
                }
                years += Years;
                months += Months;
               
                <tr>
                    <td style="text-align: center; vertical-align: middle;border-bottom: 1px solid #fff;background-color:@color">
                        @(index++)
                    </td>
                    <td style="text-align: center; text-transform: uppercase; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                      
                    </td>
                    <td style="vertical-align: middle; text-transform: uppercase; text-align: left;">
                        @Html.ActionLink(Html.DisplayFor(modelItem => item.FirstName).ToHtmlString(), "FacultyVerification", "FacultyVerificationDENew", new { fid = UAAAS.Models.Utilities.EncryptString(item.Id.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]), collegeid = Request.Params["collegeid"] }, new { target = "_blank" })
                    
                        <span>&nbsp;&nbsp;</span>
                        @Html.DisplayFor(modelItem => item.MiddleName)
                        <span>&nbsp;&nbsp;</span>
                        @Html.DisplayFor(modelItem => item.LastName)

                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @DeptName
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.PANNumber)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                       @years
                    </td>
                    <td style="text-align: center; vertical-align: middle;" >
                        @*@Html.DisplayFor(modelItem => item.PHD)*@
                        @if (item.PhdDeskDocument != string.Empty)
                        {
                            <a href="~/Content/Upload/Faculty/PhdDocument/@item.PhdDeskDocument" target="_blank">
                                <img class="image" src="@Url.Content("../../Content/images/pdf.png")" alt="View" height="18">
                                @*<span style="font-weight:bold;color:red">View</span>*@
                            </a>
                        }
                        else
                        {
                            <a class="tdcheck" href="@item.PhdDeskReason" target="_blank">
                                <img title="@item.PhdDeskReason" src="@Url.Content("../../Content/images/worng.png")" alt="View" height="18">
                            </a>
                        }
                    </td>
                    <td style="text-align: center; vertical-align: middle;" >
                        <a href="../Content/Upload/Faculty/Photos/@item.facultyPhoto" target="_blank">
                            <img src="../Content/Upload/Faculty/Photos/@item.facultyPhoto" style="height: 60px;" />
                            @*<span style="font-weight:bold;color:red">View</span>*@
                        </a>
                     </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.ActionLink("Approve", "PHDApprove", "FacultyVerificationDENew", new { fid = UAAAS.Models.Utilities.EncryptString(item.Id.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]) }, new { @class = "confirmDialog edit_button" })
                        @*@Html.ActionLink("Conform", "PHDApprove", new { id = item.Id }, new { @class = "confirmDialog delete_button" })*@
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.ActionLink("NotApprove", "PHDNOTApprove", "FacultyVerificationDENew", new { fid = UAAAS.Models.Utilities.EncryptString(item.Id.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]) }, new { @class = "viewDialog delete_button" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    <input type="text" id="i-0" style="width: 80%; text-align: left; display: none;" class="search_init">
                </th>
                <th>
                    <input type="text" id="i-1" style="width: 90%; text-align: center;" class="search_init">
