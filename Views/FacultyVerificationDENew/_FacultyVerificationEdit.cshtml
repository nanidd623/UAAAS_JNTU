    $("input[name=ModifiedPAN]").change(function () {
        var value = $(this).val();
        if (value == 0) {
            $("#ModifiedPANNo").show();
        }
        else {
            $("#ModifiedPANNo").val('');
            $("#ModifiedPANNo").hide();
            $("#ModifiedPANNo>span").text('');
