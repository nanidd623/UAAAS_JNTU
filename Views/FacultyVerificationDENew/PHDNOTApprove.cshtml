@model UAAAS.Models.FacultyPhdDeskVerification

@{
    ViewBag.Title = "PHDNOTApprove";
}

<h2>PHD NOT Approve Reson</h2>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("PHDNOTApprove", "FacultyVerificationDENew", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "NOTApprove" }, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table class="faculty_table news" style="height:auto">
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.PhdDeskVerificationReason)
                @Html.HiddenFor(model => model.Id)
            </td>
            <td class="col2">
                @Html.DropDownListFor(model => model.PhdDeskVerificationReason,
    new SelectList(ViewBag.Resons as System.Collections.IEnumerable,"value","Text"),
"-- Select --", new { id = "PhdDeskVerificationReason", style = "font-size: 13px;width:281px" })
            </td>
        </tr>
        <tr style="display:none" id="dvTextbox">
            <td class="col1">
                @Html.LabelFor(model => model.OtherReson)

            </td>
            <td class="col2">
                @Html.TextAreaFor(model => model.OtherReson, new { style = "font-size: 13px;" })
            </td>
        </tr>
        <tr>
            <td colspan="4" style="text-align:right">
                <input type="submit" value="Submit" class="btnclass" style="font-size:12px" />
            </td>
        </tr>
    </table>
}


<script type="text/javascript">
    $(document).ready(function () {
       
    });

    $("#PhdDeskVerificationReason").change(function () {
        debugger;
        var selectedvalue = $(this).val();
        if (selectedvalue == "6") {

            $("#dvTextbox").show();
            $("#OtherReson").addClass("required");

        } else  {
            $("#dvTextbox").hide();
            $("#OtherReson").removeClass("required");

        }
    });

</script>