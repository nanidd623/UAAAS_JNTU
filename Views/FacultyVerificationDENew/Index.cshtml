                    }
                }
            });
            $("#dialog-approve").dialog('open');
            return false;
        });

        $(".notApproveconfirmDialog").live("click", function (e) {
            debugger;
            var url = $(this).attr('href');
            $("#dialog-notapprove").dialog({
                title: 'Not Approve Faculty SCM',
                autoOpen: false,
