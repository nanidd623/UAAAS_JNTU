                    Experiance Document
                </th>
              
                <th class="ui-state-default" style="width: 50px;">Edit</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
               @Html.HiddenFor(modelItem => item.RegistrationNo)
                @Html.HiddenFor(modelItem => item.ScmId)
                @Html.HiddenFor(modelItem => item.FacultyType)
                @Html.HiddenFor(modelItem => item.FacultyId)   
                <tr>
                    <td style="text-align: center; vertical-align: middle;  border-bottom: 1px solid #fff;">
                        @(index++)
                    </td>
                    <td style="text-align: center; text-transform: uppercase; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.RegistrationNo)
                    </td>

                    <td style="vertical-align: middle; text-transform: uppercase; text-align: left;">
                        @Html.DisplayFor(modelItem => item.Firstname)
                        @*<span>&nbsp;</span>*@
                        @Html.DisplayFor(modelItem => item.Middlename)
                        @*<span>&nbsp;</span>*@
                        @Html.DisplayFor(modelItem => item.Lastname)

                    </td>
                    <td style="text-align: left; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.Designation)

                    </td>
                    <td style="text-align: left; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.DepartmentName)

                    </td>
                    <td style="text-align: left; vertical-align: middle;">
                        <span style="color:red;">@item.DeactiviationReason</span>
                    </td>
                    <td style="text-align: left; vertical-align: middle;">
                        <span>
                             @if (item.ExperianceDocumentView != null)
                             {
                        
                            <b><a href="../Content/Upload/SCMPROCEEDINGSREQUEST/FacultyExperianceDocuments/@item.ExperianceDocumentView" target="_blank">View</a></b>
                             }
                             else
                             {
                                <b>--</b>
                             }
                       
                        </span>
                    </td>
                    

                    <td style="text-align: center; vertical-align: middle;">
                        @Html.ActionLink("Edit", "FacultyExperianceDocumentEdit", new { regno = UAAAS.Models.Utilities.EncryptString(@item.RegistrationNo, System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]), scmId = UAAAS.Models.Utilities.EncryptString(@item.ScmId.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]), facultyType = UAAAS.Models.Utilities.EncryptString(@item.FacultyType.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]), Id = UAAAS.Models.Utilities.EncryptString(@item.FacultyId.ToString(), System.Web.Configuration.WebConfigurationManager.AppSettings["CryptoKey"]), deptName = @item.DepartmentName,expdoc=@item.ExperianceDocumentView }, new { @class = "confirrm edit_button editdilog" })
                    </td>


