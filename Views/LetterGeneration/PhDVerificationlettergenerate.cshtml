@{
    ViewBag.Title = "PhDVerificationlettergenerate";
}

<h2>Upload Excel</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jspdf.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jspdf.plugin.from_html.js")" type="text/javascript"></script>

@using (Html.BeginForm("PhDVerificationlettergenerate", "LetterGeneration", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table width="100%" style="padding-left:100px;">
        <tr>
            <td class="editor-label">
                <span>Letter Type</span>
            </td>
            <td class="editor-field">
                <div>
                    <label>@Html.RadioButton("type", "PhDVerification")PhD Verification</label>&nbsp;&nbsp;&nbsp;
                    <label>@Html.RadioButton("type", "BASNotice")BAS Notice</label>&nbsp;&nbsp;&nbsp;
                </div>
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                <span> Select Excel File</span>
            </td>
            <td class="editor-field">
                @Html.TextBox("excelfile", null, new { type = "file", @class = "required", @style = "vertical-align: top;" }) &nbsp;&nbsp;<span style="color: red;"></span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Generate Circular" />
            </td>
        </tr>
    </table>
}
