@if (TempData["SUCCESS"] != null)
{
    <div class="success">
        <p style="text-align: center;font-weight: bold">@TempData["SUCCESS"].ToString()</p>
    </div>
}
@if (TempData["ERROR"] != null)
{
    <div class="error">
        <p style="text-align: center;font-weight: bold;">@TempData["ERROR"].ToString()</p>
    </div>
}
<br />
<table id="example" class="display" style="width: 100%">
    <thead>
        <tr>
            <th style="width: 80px; text-align: center;">
                S.No
            </th>
            <th style="width: 80px; text-align: center;">
                Code
            </th>
            <th style="text-align: left;">
                College Name
            </th>
            <th style="text-align: left;">
                NoofComplaints
            </th>
            <th style="text-align: left;">
                NoofnotpathComplaints
            </th>
            <th style="text-align: left;">
                Complaints
            </th>
            <th style="text-align: left;">
                View
            </th>
        </tr>
      
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
            var colorstatus = string.Empty;
            if (item.complaintcount !=0)
            {
                colorstatus = "Red";
            }
            <tr>
                <td style="text-align: center; background-color: @colorstatus">
                    @(index++)
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.DisplayFor(modelItem => item.collegecode)
                </td>
                <td style="text-align: left;">
                    @if (item.isActive == false)
                    {
                        <span style="color: red;">@Html.DisplayFor(modelItem => item.collegename)</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.collegename)
                    }
                </td>
                <td style="text-align: center;">
                    @if (item.complaintcount != 0)
                    {
                        @Html.DisplayFor(modelItem => item.complaintcount)
                    }
                    else
                    {
                        <span>--</span>
                    }
                </td>
                <td style="text-align: center;">
                    @if (item.nocomplaintpathcount != 0)
                    {
                        @Html.DisplayFor(modelItem => item.nocomplaintpathcount)
                    }
                    else
                    {
                        <span>--</span>
                    }
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.ActionLink("Edit", "CollegeComplaint", "CollegeComplaints", new {collegeid = @item.id}, new {@class = "edit_button", target = "_blank"})
                    @*@Html.ActionLink("Complaint", "CollegeComplaint", "CollegeComplaints", new { collegeid = item.id }, new { @id = "Dialog_NotApproved", @class = "editDialog edit_button" })*@
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.ActionLink("Edit", "ViewCollegeComplaint", "CollegeComplaints", new { collegeid = @item.id }, new { @class = "view_button", target = "_blank" })                    
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>
                <input type="text" id="i-0" style="width: 90%; text-align: left; display: none;" class="search_init">
            </th>
            <th>
                <input type="text" id="i-1" style="width: 60%; text-align: left;" class="search_init">
            </th>
            <th>
                <input type="text" id="i-2" style="width: 90%; text-align: left;" class="search_init">
            </th>
            <th>
