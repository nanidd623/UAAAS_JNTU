@model IEnumerable<UAAAS.Models.jntuh_college>
@{
    ViewBag.Title = "Colleges";
    var index = 1;
    UAAAS.Models.uaaasDBContext db = new UAAAS.Models.uaaasDBContext();
}

<h2>Colleges BAS Complaints</h2>

<script type="text/javascript">
    var asInitVals = new Array();

    $(document).ready(function () {
        /* Initialize table and make first column non-sortable*/
        var oTable = $('#example').dataTable({
            "bJQueryUI": true,
            "iDisplayLength": 25,
            "bStateSave": false,
            "sDom": '<"top"lfip>rt<"bottom"ip<"clear">',
            //"sPaginationType": "full_numbers",
            "oLanguage": {
                "sSearch": "Search all columns:",
                "oPaginate": {
                    "sFirst": "",
                    "sLast": "",
                    "sNext": "",
                    "sPrevious": ""
                }
            },
            "fnInitComplete": function () {
                var oSettings = $('#example').dataTable().fnSettings();
                for (var i = 0; i < oSettings.aoPreSearchCols.length; i++) {
                    if (oSettings.aoPreSearchCols[i].sSearch.length > 0) {
                        $("tfoot input")[i].value = oSettings.aoPreSearchCols[i].sSearch;
                        $("tfoot input")[i].className = "";
                    }
                }
            },
            "aoColumns": [{ "bSortable": true, "bSearchable": true }, null, null, null, null,null],
            //"aoColumns": [{ type: "select", values: ['Gecko', 'Trident', 'KHTML', 'Misc', 'Presto', 'Webkit', 'Tasman'] },{ type: "text" },null,{ type: "number" },{ type: "select" }]
        });
        /*
         * Support functions to provide a little bit of 'user friendlyness' to the textboxes in
         * the footer
         */
        $("tfoot input").each(function (i) {
            asInitVals[i] = this.value;
        });
        $("tfoot input").focus(function () {
            if (this.className == "search_init") {
                this.className = "";
                this.value = "";
            }
        });
        $("tfoot input").blur(function (i) {
            if (this.value == "") {
                this.className = "search_init";
                this.value = asInitVals[$("tfoot input").index(this)];
            }
        });

        $("tfoot input").keyup(function () {
            /* Filter on the column (the index) of this element */
            oTable.fnFilter(this.value, $("tfoot input").index(this));
        });

        //Update collegestatus popup


        $("#Dialog_NotApproved").click(function () {
            debugger;
            var url = $(this).attr('href');

            $("#NotApprovedflags").dialog({
                title: 'College Complaints',
                width: 750,
                height: 300,
                model: true,
                resizable: false,
                autoOpen: false,
                show: { effect: 'drop', direction: 'up' },
                draggable: true,
                open: function (event, ui) {
                    $(this).load(url);
                },
                close: function (event, ui) {
                    // $(this).dialog("close");
                    window.location.href = "/CollegeComplaints/Index";
                }

            });
            $("#NotApprovedflags").dialog('open');
            return false;
        });


    });
</script>
@if (TempData["SUCCESS"] != null)
{
    <div class="success">
        <p style="text-align: center;font-weight: bold">@TempData["SUCCESS"].ToString()</p>
    </div>
}
@if (TempData["ERROR"] != null)
{
    <div class="error">
        <p style="text-align: center;font-weight: bold;">@TempData["ERROR"].ToString()</p>
    </div>
}
<br/>
<p style="color: red; background-color: #E8EFF3; border: 1px solid greenyellow; font-weight: bold">   
    @if (ViewBag.Totalcomplaints != null)
    {
        <span>Total Complaints :@ViewBag.Totalcomplaints</span><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
    }
    @if (ViewBag.Todaycomplaints != null)
    {
        <span>Total Today Complaints :@ViewBag.Todaycomplaints</span><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
    }
</p><br />
<table id="example" class="display" style="width: 100%">
    <thead>
        <tr>
            <th style="width: 80px; text-align: center;">
                S.No
            </th>
            <th style="width: 80px; text-align: center;">
                Code
            </th>
            <th style="text-align: left;">
                College Name
            </th>
            <th style="text-align: left;">
                Request counts
            </th>
            <th style="text-align: left;">
                Complaints
            </th>
            <th style="text-align: left;">
                View
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            int count = db.jntuh_college_bas_complaints.Where(r => r.collegeid == item.id & r.isactive == true).Select(s => s).Count();
            var colorstatus = string.Empty;
            if (count != 0)
            {
                colorstatus = "Red";
            }
            <tr>
                <td style="text-align: center; background-color: @colorstatus">
                    @(index++)
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.DisplayFor(modelItem => item.collegeCode)
                </td>
                <td style="text-align: left;">
                    @if (item.isActive == false)
                    {
                        <span style="color: red;">@Html.DisplayFor(modelItem => item.collegeName)</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.collegeName)
                    }
                </td>
                <td style="text-align: center;">
                    @count
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.ActionLink("Edit", "BasCollegeComplaints", "CollegeComplaints", new { collegeid = @item.id }, new { @class = "edit_button", target = "_blank" })
                    @*@Html.ActionLink("Complaint", "CollegeComplaint", "CollegeComplaints", new { collegeid = item.id }, new { @id = "Dialog_NotApproved", @class = "editDialog edit_button" })*@
                </td>
                <td style="text-align: center; text-transform: uppercase;">
                    @Html.ActionLink("Edit", "BasViewCollegeComplaint", "CollegeComplaints", new { collegeid = @item.id }, new { @class = "view_button", target = "_blank" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                <input type="text" id="i-0" style="width: 90%; text-align: left; display: none;" class="search_init">
            </th>
            <th>
                <input type="text" id="i-1" style="width: 60%; text-align: left;" class="search_init">
            </th>
            <th>
                <input type="text" id="i-2" style="width: 90%; text-align: left;" class="search_init">
            </th>
            <th>
                <input type="text" id="i-3" style="width: 90%; text-align: left; display: none; " class="search_init">
            </th>
            <th class=" ui-state-default">
                <input type="text" id="i-4" style="width: 90%; text-align: left; display: none;" class="search_init">
            </th>
            <th class=" ui-state-default">
                <input type="text" id="i-5" style="width: 90%; text-align: left; display: none;" class="search_init">
            </th>

        </tr>
    </tfoot>
</table>
