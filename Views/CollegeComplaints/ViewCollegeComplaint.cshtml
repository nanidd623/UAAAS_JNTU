@model IEnumerable<UAAAS.Controllers.Complaints>
@{
    ViewBag.Title = "ViewCollegeComplaint";
    var index = 1;
}

<h2>College Complaints</h2>
<br />
<div>
    <p style="text-align: center;background-color: #71468A;"><span style="color: white; font-weight: bold;font-size: large">@ViewBag.CollegeCode - @ViewBag.CollegeName</span></p>
</div>
<br />
@if (TempData["SUCCESS"] != null)
{
    <div class="success">
        <p style="text-align: center;font-weight: bold">@TempData["SUCCESS"].ToString()</p>
    </div>
}
@if (TempData["ERROR"] != null)
{
    <div class="error">
        <p style="text-align: center;font-weight: bold;">@TempData["ERROR"].ToString()</p>
    </div>
}
<br />
