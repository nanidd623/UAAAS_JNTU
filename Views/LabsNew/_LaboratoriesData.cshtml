}
<script type="text/javascript">
    $(document).ready(function () {

        $(".submit").click(function () {           
            if ($("#eqpname").val() == '') {              
                $("#eqpname").addClass("required");
            }
            else {
                $("#eqpname").removeClass("required");
            }
        });

    });

</script>

