@model UAAAS.Models.CollegeExaminationBranchstaffDetails
@{
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
    if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("DataEntry"))
    {
        Layout = "~/Views/Shared/_DataEntryLayoutLeftMenu.cshtml";
    } 
    ViewBag.Title = "College Examination Branch";
}

<h2>College Examination Branch</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("AddOrEditStaffMembers", "CollegeExaminationBranch", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "CollegeExaminationBranchDialog" }))
{
    @Html.ValidationSummary(true)    
    @Html.HiddenFor(model => model.collegeId, new { @Value = Model.collegeId })
    <div class="details_table">
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="editor-label focus" style="width:200px">
            @Html.LabelFor(model => model.staffName)
        </div>
        <div class="editor-field" style="width:350px">
            @Html.EditorFor(model => model.staffName)
            @Html.ValidationMessageFor(model => model.staffName)
        </div>

        <div class="editor-label" style="width:200px">
            @Html.LabelFor(model => model.staffDesignation)
        </div>
        <div class="editor-field" style="width:350px">
            @Html.EditorFor(model => model.staffDesignation)
            @Html.ValidationMessageFor(model => model.staffDesignation)
        </div>

        <div class="editor-label" style="width:200px">
            @Html.LabelFor(model => model.isTeachingStaff)
        </div>
        <div class="editor-field" style="width:350px">
            <label>@Html.RadioButtonFor(model => model.isTeachingStaff, true) Teaching</label>
            <label>@Html.RadioButtonFor(model => model.isTeachingStaff, false) Non-Teaching</label>
            @Html.ValidationMessageFor(model => model.isTeachingStaff)
        </div>

        @Html.HiddenFor(model => model.createdOn)
        @Html.HiddenFor(model => model.createdBy)
        @Html.HiddenFor(model => model.updatedOn)
        @Html.HiddenFor(model => model.updatedBy)

        <div style="text-align: center">
            <p>
                @if (ViewBag.IsUpdate == true)
                {
                    <input type="submit" value="Save" id="btnSave" name="cmd" />                    
                }
                else
                {
                    <input type="submit" value="Add" id="btnAdd" name="cmd" />
                }
            </p>
        </div>
    </div>
}
