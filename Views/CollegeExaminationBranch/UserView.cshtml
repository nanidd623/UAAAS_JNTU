@model UAAAS.Models.CollegeExaminationBranch
@{
    Layout = "~/Views/Shared/_UserLayoutLeftMenu.cshtml";
    ViewBag.Title = "College Examination Branch";
}
<h2>College Examination Branch</h2>
@using (Html.BeginForm())
{
    if (ViewBag.Norecords == true)
    {
    <div class="warning" style="width: 200px; margin: 0 auto;">
        <p>No Data found</p>
    </div>
    }
    else
    {
    <table class="four_columns" style="width: 100%">
        <tr>
            <td class="col11" colspan="2">
                <b>Examination Branch: </b>
            </td>
        </tr>
        <tr>
            <td class="col11">
                @Html.LabelFor(model => model.examinationBranchArea)
            </td>
            <td class="col21" style="width: 52%">
                @Html.DisplayFor(model => model.examinationBranchArea, new { @Value = Model.examinationBranchArea == 0 ? "" : @Model.examinationBranchArea.ToString() })
            </td>
        </tr>
        <tr>
            <td class="col11">
                @Html.LabelFor(model => model.isConfidenatialRoomExists)
            </td>
            <td class="col21" style="width: 52%">
                @if (Model.isConfidenatialRoomExists == true)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
        </tr>
        <tr>
            <td class="col11" style="width: 52%">
                @Html.LabelFor(model => model.isAdjacentPrincipalRoom)
            </td>
            <td class="col21">
                @if (Model.isAdjacentPrincipalRoom == true)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
        </tr>
        <tr>
            <td class="col11">
                @Html.LabelFor(model => model.isAdjacentPrincipalRoom)
            </td>
            <td class="col21" style="width: 52%">
                @if (Model.isAdjacentPrincipalRoom == true)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
        </tr>
        <tr>
            <td class="col11" colspan="4">
                <b>Details of measures taken by the college to maintain the Confidentiality/Security of the Examination Branch: </b>
            </td>
        </tr>
    </table>
    <table class="four_columns" style="width: 100%">
        <tr>
            <td class="col11" style="width: 1%">
                @Html.LabelFor(model => model.securityMesearesTaken1)
            </td>
            <td class="col21">
                @Html.DisplayFor(model => model.securityMesearesTaken1, new { style = "width: 930px; resize: none;" })
            </td>
        </tr>
        <tr>
            <td class="col11" style="width: 1%">
                @Html.LabelFor(model => model.securityMesearesTaken2)
            </td>
            <td class="col21">
                @Html.DisplayFor(model => model.securityMesearesTaken2, new { style = "width: 930px; resize: none;" })
            </td>
        </tr>
        <tr>
            <td class="col11" style="width: 1%">
                @Html.LabelFor(model => model.securityMesearesTaken3)
            </td>
            <td class="col21">
                @Html.DisplayFor(model => model.securityMesearesTaken3, new { style = "width: 930px; resize: none;" })
            </td>
        </tr>
    </table>               
    <br />        
                int count = 0;     
    <table class="four_columns" style="width: 100%;">
        <tr>
            <td class="col11" colspan="5">
                <b>Staff Members:</b>
            </td>
        </tr>
        <tr style="font-weight: bold;">
            <td style="text-align: center;width:4%" class="col11">S.No</td>
            <td style="text-align: left;width:32%" class="col11">Name of the Staff</td>
            <td style="text-align: left;width:32%" class="col11">Designation</td>
            <td style="text-align: left;width:32%" class="col11">Teaching/Non-Teaching</td>
        </tr>
        @foreach (var item in ViewBag.StaffMembers)
        {                
            <tr>
                <td style="text-align: center;" class="col21">
                    @(count = count + 1)
                </td>
                <td style="text-align: left;" class="col21">
                    @if (item.staffName != null)
                    {
                        <label>@item.staffName</label>
                    }
                    else
                    {
                        <label></label>
                    }
                </td>
                <td style="text-align: left;" class="col21">
                    @if (item.staffDesignation != null)
                    {
                        <label>@item.staffDesignation</label>
                    }
                    else
                    {
                        <label></label>
                    }
                </td>
                <td style="text-align: left;" class="col21">
                    @if (item.isTeachingStaff == true)
                    {
                        <label>Teaching</label>
                    }
                    else
                    {
                        <label>Non-Teaching</label>
                    }
                </td>
            </tr>
        }
    </table>
    }
}


