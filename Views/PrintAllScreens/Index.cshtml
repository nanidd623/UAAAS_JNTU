@model IList<UAAAS.Models.CollegePrinterDetails>
@using UAAAS.Models
@{
    ViewBag.Title = "Printers";
    //Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".view_hide").show();
        printdiv('div_print');
    });
    function printdiv(printpage) {
        $(".view_hide").hide();
        //Get the HTML of div
        var divElements = document.getElementById(printpage).innerHTML;
        //Get the HTML of whole page
        var oldPage = document.body.innerHTML;

        //Reset the page's HTML with div's HTML only
        document.body.innerHTML =
          "<html><head><title></title></head><body>" +
          divElements.fontsize(1) + "</body>";

        //Print Page
        window.print();
        var url = '@Url.Action("View", "CollegePrinter")';
           window.location.href = url;
        //Restore orignal HTML
        document.body.innerHTML = oldPage;
        $(".view_hide").show();
        return false;
    }
</script>

<div id="div_print">
    @if (ViewBag.IsEditable == false)
    {
        <h2>Printers</h2>
    }
    @using (Html.BeginForm())
    {
        if (ViewBag.Norecords == true)
        {
        <div class="warning" style="width: 200px; margin: 0 auto;">
            <p>No Data found</p>
        </div>
        }
        else
        {
    
        <table class="four_columns" style="width: 100%;">
            <tr style="font-weight: bold;">
                <td style="text-align: left;" class="col11">Degree</td>
                <td style="text-align: center; width: 140px;" class="col11">Available Computers</td>
                <td style="text-align: center; width: 140px;" class="col11">Available Printers</td>
            </tr>

            @for (int i = 0; i < ViewBag.Count; i++)
            {
                <tr>
                    <td style="text-align: left; width: 30%" class="col21">
                        @Html.LabelFor(m => m[i].degree, Model[i].degree == null ? string.Empty : Model[i].degree.ToString())
                        @Html.HiddenFor(m => m[i].degreeId)
                    </td>
                    <td style="text-align: center; width: 25%" class="col21">
                        @Html.LabelFor(m => m[i].availableComputers, Model[i].availableComputers == 0 ? "0" : Model[i].availableComputers.ToString())
                    </td>
                    <td style="text-align: center; width: 25%" class="col21">
                        @if (ViewBag.Update == true)
                        {
                            @Html.DisplayFor(m => m[i].availablePrinters, new { Value = Model[i].availablePrinters == 0 ? "0" : Model[i].availablePrinters.ToString(), style = "text-align: center;" })
                        }
                        else
                        {
                            @Html.DisplayFor(m => m[i].availablePrinters, new { Value = Model[i].availablePrinters == 0 ? string.Empty : Model[i].availablePrinters.ToString(), style = "text-align: center;" })
                        }
                    </td>
                </tr>
            }
        </table>
            if (ViewBag.Count == 0)
            {
        <div class="warning" style="width: 550px; margin: 0 auto;">
            <p>Please select your courses in "College Information" page before filling up this page.</p>
        </div>
            }

        }

    }
</div>
