@model UAAAS.Models.ClusterScheduleEmails
@using UAAAS.Models;
@{
    ViewBag.Title = "AddClusterColleges";
    uaaasDBContext db = new uaaasDBContext();
}
<h2>AddClusterColleges</h2>
<script type="text/javascript">
    
    $(document).ready(function () {
        $(function () {
            $("#ShiftRight,#ShiftLeft").click(function (event) {
                var ID = $(event.target).attr("ID");
                var ChooseFrom = ID == "ShiftRight" ? "#ChooseLeft" : "#ChooseRight";
                var moveTo = ID == "ShiftRight" ? "#ChooseRight" : "#ChooseLeft";

                var SelectData = $(ChooseFrom + " :selected").toArray();
                $(moveTo).append(SelectData);
                SelectData.remove;
            });
        });
        $('#btnsave').click(function () {
          
         
            if ($('#cluster').val() == '') {                
                alert('Cluster is required');
                return false;
            }
            var items = $('#ChooseRight').val();            
            if (items == null) {
                alert('Choose colleges');
                return false;
            }           
        });       
    });
</script>
@using (Html.BeginForm("AddClusterColleges", "ClusterColleges", FormMethod.Post))
{
    <table class="four_columns" style="width: 50%; margin-left: auto; margin-right: auto">
        <tr>
            <td class="col1">Cluster Name
            </td>
            <td class="col2" colspan="2">
                @Html.TextBoxFor(model => model.cluster)
            </td>
            <td class="col1" style="text-align: center">
                <input type="submit" id="btnsave" value="Save" />
                @Html.ActionLink("Back", "ClusterCollegesIndex", "ClusterColleges", null, new { @class = "create_button" })
            </td>
        </tr>
    </table>
    <br />
    <table class="four_columns" style="width: 100%; height: 600px; margin-left: auto; margin-right: auto">
        <tr>
            <td class="col1" style="width: 30%;">
                @Html.ListBox("colleges",
               new MultiSelectList(@db.jntuh_college.Where(c => c.isActive == true).Select(c => new { id = c.id, Name = c.collegeCode + "-" + c.collegeName }).OrderBy(c => c.Name).ToList(), "Id", "Name")
               , new { id = "ChooseLeft", @style = "width:100%;height:600px" })
            </td>
            <td class="col2" style="width: 10%; text-align: center; vertical-align: top">
                <input id="ShiftRight" type="button" value=" >> " title="Add" />
                <input id="ShiftLeft" type="button" value="<< " title="Remove" />
            </td>
            <td class="col1" style="width: 30%;">
                <select id="ChooseRight" name="ChooseRight" multiple="multiple" style="width: 100%; height: 600px"></select>
            </td>
        </tr>
    </table>
}
