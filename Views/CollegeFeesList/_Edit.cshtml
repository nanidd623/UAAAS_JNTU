@model UAAAS.Models.CollegeFeesListModel
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("Update", "CollegeFeesList", new AjaxOptions { HttpMethod = "POST" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CollegeId, new { @Value = Model.CollegeId })
    @Html.HiddenFor(model => model.academicYearId, new { @Value = Model.academicYearId })
    if (TempData["Error"] != null)
    {
        <div class="error">
            <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
        </div>
    }
    if (TempData["Success"] != null)
    {
        <div class="success">
            <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
        </div>
    }
    <div class="details_table">
        <div class="editor-label" style="width: 200px">
            @Html.LabelFor(model => model.CollegeCode)
        </div>
        <div class="editor-field" style="width: 290px">
            @Html.DisplayFor(model => model.CollegeCode)
        </div>
        <div class="editor-label" style="width: 200px">
            @Html.LabelFor(model => model.CollegeName)
        </div>
        <div class="editor-field" style="width: 290px">
            @Html.DisplayFor(model => model.CollegeName)
        </div>
        <div class="editor-label" style="width: 200px">
            @Html.LabelFor(model => model.AffiliationFee)
        </div>
        <div class="editor-field" style="width: 290px">
            @Html.TextBoxFor(model => model.AffiliationFee, new { @class = "required", onkeypress = "return isNumberKey(event)" })
            @Html.ValidationMessageFor(model => model.AffiliationFee)
        </div>
        <div class="editor-label" style="width: 200px">
            @Html.LabelFor(model => model.CommonServiceFee)
        </div>
        <div class="editor-field" style="width: 290px">
            @Html.TextBoxFor(model => model.CommonServiceFee, new { @class = "required", onkeypress = "return isNumberKey(event)" })
            @Html.ValidationMessageFor(model => model.CommonServiceFee)
        </div>
        <div class="editor-label" style="width: 200px">
            @Html.LabelFor(model => model.GstAmount)
        </div>
        <div class="editor-field" style="width: 290px">
            @Html.TextBoxFor(model => model.GstAmount, new { @class = "required", onkeypress = "return isNumberKey(event)" })
            @Html.ValidationMessageFor(model => model.GstAmount)
        </div>
        <div style="text-align: center">
            <p>
                <input type="submit" value="Update" id="btnUpdate" />
            </p>
        </div>
    </div>
}
